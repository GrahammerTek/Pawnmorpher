<Defs>    

	<Pawnmorph.AspectDef Abstract="true" Name="ColorationAspect">
		<aspectType>Pawnmorph.Aspects.Coloration</aspectType>
		<transferToAnimal>true</transferToAnimal>
    </Pawnmorph.AspectDef>
	
	<Pawnmorph.AspectDef ParentName="ColorationAspect">
		<defName>ColorationNatural</defName>
		<labelColor>(200,200,145)</labelColor>
		<conflictingAspects>
			<li>ColorationAlbinism</li>
			<li>ColorationMelanism</li>
			<li>ColorationUnnatural</li>
		</conflictingAspects>
		<stages>
			<li>
				<label>Unusual colors (natural)</label>
				<description>[PAWN_nameDef]'s coloration has shifted to those not typically seen in the base species.</description>			
			</li>
		</stages>
	</Pawnmorph.AspectDef>
	<Pawnmorph.AspectDef ParentName="ColorationAspect">
		<defName>ColorationAlbinism</defName>	
		<labelColor>(245,245,245)</labelColor>
		<conflictingAspects>
			<li>ColorationNatural</li>
			<li>ColorationMelanism</li>
			<li>ColorationUnnatural</li>
		</conflictingAspects>
		<stages>
			<li>
				<label>Unusual colors (albinism)</label>
				<description>[PAWN_nameDef] has lost most of their pigmentation.</description>		
			</li>
		</stages>
	</Pawnmorph.AspectDef>
	<Pawnmorph.AspectDef ParentName="ColorationAspect">
		<defName>ColorationMelanism</defName>
		<labelColor>(100,100,100)</labelColor>
		<conflictingAspects>
			<li>ColorationNatural</li>
			<li>ColorationAlbinism</li>
			<li>ColorationUnnatural</li>
		</conflictingAspects>
		<stages>
			<li>
				<label>Unusual colors (melanism)</label>
				<description>[PAWN_nameDef] has an excessive amount of melanin, leading to a dark coloration.</description>
			</li>
		</stages>
	</Pawnmorph.AspectDef>
	<Pawnmorph.AspectDef ParentName="ColorationAspect">
		<defName>ColorationUnnatural</defName>
		<labelColor>(0,255,145)</labelColor>
		<conflictingAspects>
			<li>ColorationNatural</li>
			<li>ColorationAlbinism</li>
			<li>ColorationMelanism</li>
		</conflictingAspects>
		<stages>
			<li>
				<label>Unusual colors (unnatural)</label>
				<description>[PAWN_nameDef]'s coloration has shifted to one not typically seen in nature (except in highly poisonous frogs).</description>
			</li>
		</stages>
	</Pawnmorph.AspectDef>
</Defs>