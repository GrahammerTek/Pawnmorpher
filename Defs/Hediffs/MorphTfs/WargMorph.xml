<Defs>
	<!--Morph Reaction-->
	<ThoughtDef>
		<defName>EtherReactionWargTF</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>PawnmorphWargTF</hediff>
		<stages>
			<li>
				<label>changed</label>
				<description>Howrrrlll!</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>feeling odd</label>
				<description>I have a sudden urge to howl...</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<!--Injector-->
	<ThingDef ParentName="InjectorBase">
		<defName>WargTransformer</defName>
		<label>mutasyringe, warg</label>
		<description>A mutagenic injector filled with mechanites and warg DNA. Use with caution, as leaving the mechanites unchecked may transform the user.</description>
		<ingestible>
			<outcomeDoers>
				<li Class="Pawnmorph.IngestionOutcomeDoer_GiveHediffRandom">
					<hediffDefs>
						<li>PawnmorphWargTF</li>
					</hediffDefs>
					<severity>1.00</severity>
				</li>
			</outcomeDoers>
		</ingestible>	
	</ThingDef>
	
	<!--Main Morph-->
	<HediffDef ParentName="MorphParent">
		<defName>PawnmorphWargTF</defName>
		<label>wargMorph</label>
		<stages>
			<li>
				<label>reeling</label>
				<hungerRateFactor>1.6</hungerRateFactor>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="Pawnmorph.HediffGiver_TF">
						<hediff>TransformedHuman</hediff>
						<pawnkinds>
							<li>Warg</li>
						</pawnkinds>
						<tale>TransformationCanid</tale>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>transforming</label>
				<minSeverity>0.6</minSeverity>
				<painOffset>0.1</painOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>changing</label>
				<minSeverity>0.65</minSeverity>
				<painOffset>0.1</painOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherWargMuzzle</hediff>
						<mtbDays>3</mtbDays>
						<partsToAffect>
							<li>Jaw</li>
						</partsToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherWargEar</hediff>
						<mtbDays>0.5</mtbDays>
						<partsToAffect>
							<li>Ear</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherWargTail</hediff>
						<mtbDays>2</mtbDays>
						<partsToAffect>
							<li>Tail</li>
						</partsToAffect>
						<tale>GrewTail</tale>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherThickFurLimb</hediff>
						<mtbDays>3</mtbDays>
						<partsToAffect>
							<li>Arm</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherPawHand</hediff>
						<mtbDays>2</mtbDays>
						<chance>5</chance>
						<partsToAffect>
							<li>Hand</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherDigitigradeLeg</hediff>
						<mtbDays>2</mtbDays>
						<partsToAffect>
							<li>Leg</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherPawFoot</hediff>
						<mtbDays>2</mtbDays>
						<partsToAffect>
							<li>Foot</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>
	
	<!--Partial Morph-->
	<HediffDef ParentName="PartialMorphParent">
		<defName>PawnmorphWargTFPartial</defName>
		<label>wargMorph partial</label>
		<stages>
			<li>
				<painOffset>0.1</painOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherWargMuzzle</hediff>
						<mtbDays>3</mtbDays>
						<partsToAffect>
							<li>Jaw</li>
						</partsToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherWargEar</hediff>
						<mtbDays>0.5</mtbDays>
						<partsToAffect>
							<li>Ear</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherWargTail</hediff>
						<mtbDays>2</mtbDays>
						<partsToAffect>
							<li>Tail</li>
						</partsToAffect>
						<tale>GrewTail</tale>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherThickFurLimb</hediff>
						<mtbDays>3</mtbDays>
						<partsToAffect>
							<li>Arm</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherDigitigradeLeg</hediff>
						<mtbDays>2</mtbDays>
						<partsToAffect>
							<li>Leg</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="Pawnmorph.HediffGiver_Mutation">
						<hediff>EtherPawFoot</hediff>
						<mtbDays>2</mtbDays>
						<partsToAffect>
							<li>Foot</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<!--Morph Parts-->
	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherWargMuzzle</defName>
		<label>warg muzzle</label>
		<description>A snout graces [PAWN_nameDef]'s face, like that of a canine. [PAWN_pronoun] teeth are pointed to suit, and this makes speaking more difficult, yet eating is easier.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.50</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.50</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>10.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherWargEar</defName>
		<label>warglike</label>
		<stages>
			<li>
				<partEfficiencyOffset>0.25</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherWargTail</defName>
		<label>tufted tail</label>
		<description>A thin tail with a tuft of fur at the end.</description>
		<stages>
			<li>
				<statOffsets>
					<SocialImpact>+0.05</SocialImpact>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.01</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>