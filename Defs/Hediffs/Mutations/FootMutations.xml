	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<defName>EtherAvianFoot</defName>
		<label>avian</label>
		<description>[PAWN_nameDef]'s toes stretch out into long birdlike claws, perfect for grasping things or scratching at people's faces.</description>
		<classInfluence>Avian</classInfluence>
		<parts>
			<li>Foot</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>unfamiliar</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>adapted</label>
				<partEfficiencyOffset>0.1</partEfficiencyOffset>
				<minSeverity>1</minSeverity>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>avian claws</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>5.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.20</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
