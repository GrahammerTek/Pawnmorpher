		<makesAlert>true</makesAlert>
		<defaultLabelColor>(179,86,132)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>1</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.05</severityPerDay>
			</li>
			<li Class="HediffCompProperties_Immunizable">
			</li>
		</comps>
		<stages>
			<li>
				<label>reeling</label>
				<becomeVisible>true</becomeVisible>
				<minSeverity>0</minSeverity>
				<hungerRateFactor>1.6</hungerRateFactor>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="Pawnmorph.HediffGiver_TF">
						<hediff>TransformedHuman</hediff>
						<pawnkind>Elephant</pawnkind>
						<tale>TransformationMisc</tale>
					</li>
					<li Class="Pawnmorph.HediffGiver_Esoteric_Chance">
						<hediff>EtherElephantFoot</hediff>
						<mtbDays>0.02</mtbDays>
						<chance>70</chance>
						<partsToAffect>
							<li>Hand</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>changing</label>
				
				<minSeverity>0.65</minSeverity>
				<hungerRateFactor>3</hungerRateFactor>
				<painOffset>0.1</painOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>

					<li Class="Pawnmorph.HediffGiver_Esoteric">
						<hediff>EtherTrunk</hediff>
						<mtbDays>5</mtbDays>
						<partsToAffect>
							<li>Jaw</li>
						</partsToAffect>
						<countToAffect>1</countToAffect>
					</li>

					<li Class="Pawnmorph.HediffGiver_Esoteric">
						<hediff>EtherThickHideLimb</hediff>
						<mtbDays>4</mtbDays>
						<partsToAffect>
							<li>Arm</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>

					<li Class="Pawnmorph.HediffGiver_Esoteric_Fixed">
						<hediff>EtherElephantTail</hediff>
						<mtbDays>3</mtbDays>
						<fixedParts>
							<li>Tail</li>
						</fixedParts>
						<tale>GrewTail</tale>
					</li>

					<li Class="Pawnmorph.HediffGiver_Esoteric">
						<hediff>EtherElephantEar</hediff>
						<mtbDays>1</mtbDays>
						<partsToAffect>
							<li>Ear</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>

					<li Class="Pawnmorph.HediffGiver_Esoteric">
						<hediff>EtherElephantLeg</hediff>
						<mtbDays>2</mtbDays>
						<partsToAffect>
							<li>Leg</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

