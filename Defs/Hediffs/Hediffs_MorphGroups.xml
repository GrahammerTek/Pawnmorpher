<Defs>

  <HediffDef Abstract="true" Name="MorphGroupHediffBase">
    <hediffClass>HediffWithComps</hediffClass>
	  <defaultLabelColor>(171, 106, 217)</defaultLabelColor>
    <isBad>false</isBad>
  </HediffDef>

	<HediffDef ParentName="MorphGroupHediffBase">
    <defName>CanidMind</defName>
    <label>pack minded</label>
    <stages>
      <li>
        <label>alone</label>
          <!-- TODO -->
      </li>
      <li>
        <minSeverity>2</minSeverity> <!-- the severity of the hediff is always going to equal the number of morphs on a map at a time -->
	      <label>lonely</label>
	      <!-- TODO -->
      </li>
      <li>
        <minSeverity>3</minSeverity>
        <label>comfortable</label>
	      <!-- TODO -->
      </li>
      <li>
        <minSeverity>5</minSeverity>
        <label>happy</label>
		  <!-- TODO -->
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef Abstract="true" Name="GroupThoughtBase">
	  <workerClass>ThoughtWorker_Hediff</workerClass>
  </ThoughtDef>

  <ThoughtDef ParentName="GroupThoughtBase">
    <defName>PackMinded</defName>
    <hediff>CanidMind</hediff>
	  <stages> <!-- should have the same number of stages as the hediff -->
      <li>
        <label>alone</label> 
        <description>I'm the only one of my kind, I wish I had a proper pack.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
      <li>
        <label>lonely</label>
        <description>There's another like me, but we're still only a small pack.</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
      <li>
        <label>comfortable</label>
        <visible>true</visible>
        <description>There's lots of my kind, strength in numbers.</description>
        <baseMoodEffect>1</baseMoodEffect>
		  
      </li>
      <li>
        <label>happy</label>
        <description>There's plenty of people in my pack, this is great!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

