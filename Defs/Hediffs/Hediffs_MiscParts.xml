<Defs>
	<!--Morph-specific parts are located in the individual morph's files-->
	<HediffDef ParentName="PawnmorphSkinPart">
		<defName>EtherFurredLimb</defName>
		<description>Fur has covered the entirety of [PAWN_nameDef]'s limb, giving it a soft fine coat that helps retain warmth.</description>
		<label>fur</label>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>0</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>fine</label>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.02</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li>
				<label>dusting</label>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.04</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li>
				<label>thin</label>
				<minSeverity>0.4</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.08</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li>
				<label>patches</label>
				<minSeverity>0.6</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.1</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li>
				<label>covered</label>
				<minSeverity>0.8</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.2</ComfyTemperatureMin>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphSkinPart">
		<defName>EtherThickFurLimb</defName>
		<label>fur</label>
		<description>A heavy coat of fur drapes across this limb, insulating a lot of heat.</description>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>fine</label>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.02</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li>
				<label>thin</label>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.08</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li>
				<label>patches</label>
				<minSeverity>0.4</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.1</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li>
				<label>dense</label>
				<minSeverity>0.6</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.2</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li>
				<label>thick</label>
				<minSeverity>0.8</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.3</ComfyTemperatureMin>
					<ComfyTemperatureMax>-0.1</ComfyTemperatureMax>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphSkinPart">
		<defName>EtherScaledLimb</defName>
		<label>scales</label>
		<description>Smooth, glossy scales now cover this limb, adding some natural defense and dissipating heat.</description>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>isolated</label>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<ComfyTemperatureMax>0.02</ComfyTemperatureMax>
				</statOffsets>
			</li>
			<li>
				<label>scarce</label>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<ComfyTemperatureMax>0.05</ComfyTemperatureMax>
				</statOffsets>
			</li>
			<li>
				<label>patches</label>
				<minSeverity>0.4</minSeverity>
				<statOffsets>
					<ComfyTemperatureMax>0.08</ComfyTemperatureMax>
					<ArmorRating_Sharp>0.01</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<label>swathes</label>
				<minSeverity>0.6</minSeverity>
				<statOffsets>
					<ComfyTemperatureMax>0.1</ComfyTemperatureMax>
					<ArmorRating_Blunt>0.01</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.01</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<label>covered</label>
				<minSeverity>0.8</minSeverity>
				<statOffsets>
					<ComfyTemperatureMax>0.2</ComfyTemperatureMax>
					<ArmorRating_Blunt>0.01</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.02</ArmorRating_Sharp>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphSkinPart">
		<defName>EtherHideLimb</defName>
		<label>hide</label>
		<description>A thick leathery hide has formed over this limb, adding some natural defense.</description>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>thin</label>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.01</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<label>patches</label>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<ArmorRating_Blunt>0.01</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.01</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<label>bristles</label>
				<minSeverity>0.4</minSeverity>
				<statOffsets>
					<ArmorRating_Blunt>0.01</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.02</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<label>leathery</label>
				<minSeverity>0.6</minSeverity>
				<statOffsets>
					<ArmorRating_Blunt>0.02</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<label>covered</label>
				<minSeverity>0.8</minSeverity>
				<statOffsets>
					<ArmorRating_Blunt>0.02</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.04</ArmorRating_Sharp>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherPawHand</defName>
		<label>paw</label>
		<description>Cute but inflexible paws have replaced [PAWN_nameDef]'s hands. They lack a thumb, which has receded into a useless dewclaw.</description>
		<stages>
			<li>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>claws</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>5.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherHoofHand</defName>
		<label>hoof</label>
		<description>It's terrifying, but [PAWN_nameDef]'s hands are nothing more than hooves now. Holding things, grabbing things and doing anything requiring thumbs is going to be a lot more difficult.</description>
		<stages>
			<li>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherTrotterHand</defName>
		<label>trotter</label>
		<description>[PAWN_nameDef]'s hands resemble trotters more than anything else, leaving them with little in the way of grasping ability.</description>
		<stages>
			<li>
				<partEfficiencyOffset>-0.6</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherDigitigradeLeg</defName>
		<label>digitigrade</label>
		<description>The shape of [PAWN_nameDef]'s legs reminds one more of a beast than a human, for they now stand on their toes instead of their heel, which has elongated. This does however, put a spring in their step.</description>
		<stages>
			<li>
				<label>unfamiliar</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherPawFoot</defName>
		<label>paw</label>
		<description>[PAWN_nameDef]'s feet have stretched out, growing a coat of fur, the toes shortening to clawed digits.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherClovenHoofFoot</defName>
		<description>[PAWN_nameDef]'s toenails have thickened and grown into a veritable hoof, with a split down the middle.</description>
		<label>cloven hoof</label>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherUnclovenHoofFoot</defName>
		<description>[PAWN_nameDef]'s feet have shifted into a single-toed hoof, like a horse's.</description>
		<label>hoof</label>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherTrotterFoot</defName>
		<label>trotter</label>
		<description>Smaller hooves now sit where [PAWN_nameDef]'s feet once were. Pointed things, they are.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphPart">
		<hediffClass>HediffWithComps</hediffClass>
		<defName>EtherColdBlooded</defName>
		<label>cold blooded</label>
		<description>[PAWN_nameDef]'s body no longer naturally regulates its body temperature.</description>
		<stages>
			<li>
				<statOffsets>
					<ComfyTemperatureMin>10</ComfyTemperatureMin>
					<ComfyTemperatureMax>-10</ComfyTemperatureMax>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
</Defs>