<Defs>

    <HediffDef Name="PMMutagenicBuildupWBase" Abstract="true">
        <hediffClass>Pawnmorph.Hediffs.MutagenicBuildup</hediffClass>
        <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
        <label>mutagenic buildup</label>
        <lethalSeverity>-1</lethalSeverity> <!-- if lethalSeverity is less then 0 then the hediff should never kill the pawn -->
        <maxSeverity>1</maxSeverity>
        <makesSickThought>true</makesSickThought>
        <scenarioCanAdd>true</scenarioCanAdd>
        <taleOnVisible>MutationToxicityRevealed</taleOnVisible>
        <stages>
            <li>
                <label>initial</label>
                <becomeVisible>false</becomeVisible>
            </li>
            <li>
                <label>initial</label>
                <minSeverity>0.04</minSeverity>
				<painOffset>0.1</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="Pawnmorph.Hediffs.Giver_MutationChaotic">
                        <hediff>EtherWolfMuzzle</hediff> <!-- not used but needed for prepare carefully to initialize -->
                        <blackListCategories>
                            <li>Powerful</li>
                        </blackListCategories>
                        <mtbDays>0.3</mtbDays>
                        <mtbUnits>20000</mtbUnits>
                    </li>
                </hediffGivers>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.2</minSeverity>
				<painOffset>0.2</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.10</offset>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="Pawnmorph.Hediffs.Giver_MutationChaotic">
                        <hediff>EtherWolfMuzzle</hediff> <!-- not used but needed for prepare carefully to initialize -->
                        <blackListCategories>
                            <li>Powerful</li>
                        </blackListCategories>
                        <mtbDays>0.2</mtbDays>
                        <mtbUnits>20000</mtbUnits>

                    </li>
                </hediffGivers>
            </li>
            <li>
                <label>moderate</label>
                <minSeverity>0.40</minSeverity>
                <vomitMtbDays>5</vomitMtbDays>
				<painOffset>0.3</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.15</offset>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="Pawnmorph.Hediffs.Giver_MutationChaotic">
                        <hediff>EtherWolfMuzzle</hediff> <!-- not used but needed for prepare carefully to initialize -->
                        <blackListCategories>
                            <li>Powerful</li>
                        </blackListCategories>
                        <mtbDays>0.1</mtbDays>
                        <mtbUnits>20000</mtbUnits>

                    </li>
                </hediffGivers>
            </li>
            <li>
                <label>serious</label>
                <minSeverity>0.60</minSeverity>
                <vomitMtbDays>1</vomitMtbDays>
				<painOffset>0.4</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.25</offset>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="Pawnmorph.Hediffs.Giver_MutationChaotic">
                        <hediff>EtherWolfMuzzle</hediff> <!-- not used but needed for prepare carefully to initialize -->
                        <blackListCategories>
                            <li>Powerful</li>
                        </blackListCategories>
                        <mtbDays>0.05</mtbDays>
                        <mtbUnits>20000</mtbUnits>

                    </li>
                </hediffGivers>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.80</minSeverity>
                <vomitMtbDays>0.5</vomitMtbDays>
				<painOffset>0.6</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.50</setMax>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="Pawnmorph.Hediffs.Giver_MutationChaotic">
                        <hediff>EtherWolfMuzzle</hediff> <!-- not used but needed for prepare carefully to initialize -->
                        <blackListCategories>
                            <li>Powerful</li>
                        </blackListCategories>
                        <mtbDays>0.05</mtbDays>
                        <mtbUnits>20000</mtbUnits>

                    </li>
                </hediffGivers>
            </li>
            <li>
                <minSeverity>0.85</minSeverity>
                <label>extreme</label>
				<painOffset>0.8</painOffset>
            </li>
            <li>
                <minSeverity>0.99</minSeverity>
                <label>extreme</label>
				<painOffset>0.9</painOffset>
            </li>
        </stages>
    </HediffDef>


    <HediffDef ParentName="PMMutagenicBuildupWBase">
        <defName>MutagenicBuildup_Weapon</defName>
        <comps>
            <li Class="Pawnmorph.Hediffs.CompProperties_AcceleratedSeverity">
                <recoveryTime>43.25</recoveryTime>
                <peakSeverity>0.05</peakSeverity>
            </li>
        </comps>
    </HediffDef>

    <HediffDef ParentName="PMMutagenicBuildupWBase">
        <defName>MutagenicBuildup_SmallExplosion</defName>
        <comps>
            <li Class="Pawnmorph.Hediffs.CompProperties_AcceleratedSeverity">
                <recoveryTime>70.75</recoveryTime>
                <peakSeverity>0.12</peakSeverity>
            </li>
        </comps>
    </HediffDef>
    <HediffDef ParentName="PMMutagenicBuildupWBase">
        <defName>MutagenicBuildup_LargeExplosion</defName>
        <comps>
            <li Class="Pawnmorph.Hediffs.CompProperties_AcceleratedSeverity">
                <recoveryTime>150.25</recoveryTime>
                <peakSeverity>0.45</peakSeverity>
            </li>
        </comps>
    </HediffDef>
</Defs>