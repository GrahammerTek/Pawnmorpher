<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef Name="PawnmorphPigPart" Abstract="True" ParentName="PawnmorphPart">
    <comps>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>PigMorph</morph>
      </li>
    </comps>
  </HediffDef>


  <!--Morph Parts-->
  <HediffDef ParentName="PawnmorphPigPart">
    <defName>EtherPigSnout</defName>
    <label>porcine snout</label>
    <description>A snout graces [PAWN_nameDef]'s face, snorting and snuffling for roots and berries, oinking at things that [PAWN_pronoun] likes.</description>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>0.40</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="Pawnmorph.HediffCompProperties_Production">
        <daysToProduce>0.5</daysToProduce>
        <resource>RawFungus</resource>
        <amount>25</amount>
        <thought>FoundTruffles</thought>
        <!--
				<terrains>
				<li>Soil</li>
				<li>MossyTerrain</li>
				<li>MarshyTerrain</li>
				<li>SoilRich</li>
				<li>Mud</li>
				</terrains>
				-->
      </li>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>teeth</label>
            <labelUsedInLogging>False</labelUsedInLogging>
            <capacities>
              <li>Bite</li>
            </capacities>
            <power>10.0</power>
            <cooldownTime>1.5</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
          </li>
        </tools>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="PawnmorphPigPart">
    <defName>EtherPigEar</defName>
    <label>porcine</label>
    <stages>
      <li>
        <partEfficiencyOffset>0.1</partEfficiencyOffset>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="PawnmorphPigPart">
    <defName>EtherCurlyTail</defName>
    <label>curly tail</label>
    <description>A pig's curly tail, it twitches when food is near.</description>
  </HediffDef>

</Defs>