<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherTrunk</defName>
    <label>trunk</label>
    <description>A trunk graces [PAWN_nameDef]'s face, along with two pointy tusks, a wonderful elephantine accessory.</description>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.50</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>0.20</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>tusks</label>
            <labelUsedInLogging>False</labelUsedInLogging>
            <capacities>
              <li>Stab</li>
            </capacities>
            <power>25.0</power>
            <cooldownTime>4</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
          </li>
          <li>
            <label>trunk</label>
            <labelUsedInLogging>False</labelUsedInLogging>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>8.0</power>
            <cooldownTime>2</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
          </li>
        </tools>
      </li>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>ElephantMorph</morph>

      </li>
    </comps>
  </HediffDef>
  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherElephantTail</defName>
    <label>elephant</label>
    <description>A tail of an elephant. It swishes gently at flies that gather.</description>
    <comps>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>ElephantMorph</morph>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherElephantFoot</defName>
    <label>elephant foot</label>
    <description>Thunderous stomping follows [PAWN_nameDef] everywhere they go.</description>
    <stages>
      <li>
        <partEfficiencyOffset>-0.5</partEfficiencyOffset>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>smash</label>
            <labelUsedInLogging>False</labelUsedInLogging>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>5.0</power>
            <cooldownTime>1.5</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
          </li>
        </tools>
      </li>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>ElephantMorph</morph>
      </li>
    </comps>

  </HediffDef>

  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherElephantLeg</defName>
    <label>elephantine</label>
    <description>[PAWN_nameDef]'s leg is thick and covered in a solid grey hide.</description>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
        <statOffsets>
          <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>ElephantMorph</morph>
      </li>
    </comps>
  </HediffDef>


  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherElephantEar</defName>
    <label>elephantine</label>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Hearing</capacity>
            <offset>0.25</offset>
          </li>
        </capMods>
        <statOffsets>
          <ComfyTemperatureMin>5</ComfyTemperatureMin>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>ElephantMorph</morph>
      </li>
    </comps>
  </HediffDef>
</Defs>