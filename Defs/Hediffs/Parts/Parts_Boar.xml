<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <HediffDef Name="PawnmorphBoarPart" Abstract="True" ParentName="PawnmorphPart">
    <comps>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>BoarMorph</morph>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherBoarSnout</defName>
    <label>tusked snout</label>
    <description>A snout graces [PAWN_nameDef]'s face, along with two pointy tusks perfect for rooting up vegetables.</description>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>0.40</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="Pawnmorph.HediffCompProperties_Production">
        <daysToProduce>0.5</daysToProduce>
        <resource>RawFungus</resource>
        <amount>25</amount>
        <thought>FoundTruffles</thought>
        <!--
				<terrains>
				<li>Soil</li>
				<li>MossyTerrain</li>
				<li>MarshyTerrain</li>
				<li>SoilRich</li>
				<li>Mud</li>
				</terrains>
				-->
      </li>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>teeth</label>
            <labelUsedInLogging>False</labelUsedInLogging>
            <capacities>
              <li>Bite</li>
            </capacities>
            <power>10.0</power>
            <cooldownTime>1.5</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
          </li>
          <li>
            <label>tusks</label>
            <labelUsedInLogging>False</labelUsedInLogging>
            <capacities>
              <li>Stab</li>
            </capacities>
            <power>15.0</power>
            <cooldownTime>1.5</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
          </li>
        </tools>
      </li>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>BoarMorph</morph>
        <influence>0.5</influence>
      </li>
    </comps>
  </HediffDef>
  <HediffDef ParentName="PawnmorphBoarPart">
    <defName>EtherRoughCurlyTail</defName>
    <label>hairy curled tail</label>
    <description>A boar's curly tail, it twangs when a truffle is detected.</description>
  </HediffDef>
  <HediffDef ParentName="PawnmorphBoarPart">
    <defName>EtherBoarEar</defName>
    <label>porcine</label>
    <stages>
      <li>
        <partEfficiencyOffset>0.1</partEfficiencyOffset>
      </li>
    </stages>
  </HediffDef>
</Defs>