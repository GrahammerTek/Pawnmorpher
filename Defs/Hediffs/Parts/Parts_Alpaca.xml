<?xml version="1.0" encoding="utf-8"?>
<Defs>


  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherWooly</defName>
    <label>wooly</label>
    <description>Thick wool grows over [PAWN_nameDef]'s body constantly. They can shave themselves.</description>
    <comps>
      <li Class="Pawnmorph.HediffCompProperties_Production">
        <daysToProduce>1</daysToProduce>
        <resource>WoolAlpaca</resource>
        <thought>ShavedMyself</thought>
      </li>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>AlpacaMorph</morph>
        <influence>2</influence>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherAlpacaSnout</defName>
    <label>wooly snout</label>
    <description>A snout graces [PAWN_nameDef]'s face, wooly and with lips perfect for spitting.</description>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>0.40</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>teeth</label>
            <labelUsedInLogging>False</labelUsedInLogging>
            <capacities>
              <li>Bite</li>
            </capacities>
            <power>10.0</power>
            <cooldownTime>1.5</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
          </li>
        </tools>
      </li>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>AlpacaMorph</morph>
        <influence>0.5</influence>
      </li>
    </comps>
  </HediffDef>
  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherAlpacaTail</defName>
    <label>wooly tail</label>
    <description>A wooly tail, it feels like a cloud.</description>
    <comps>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>AlpacaMorph</morph>
      </li>
    </comps>
  </HediffDef>

  
  <HediffDef ParentName="PawnmorphPart">
    <defName>EtherAlpacaEar</defName>
    <label>woolen</label>
    <stages>
      <li>
        <partEfficiencyOffset>0.15</partEfficiencyOffset>
      </li>
    </stages>
    <comps>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>AlpacaMorph</morph>
        <influence>0.5</influence>
      </li>
    </comps>
  </HediffDef>
</Defs>