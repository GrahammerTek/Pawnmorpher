<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef Abstract="true" Name="PMMorphMemoryBase">
        <thoughtClass>Pawnmorph.Thoughts.MorphMemory</thoughtClass>
    </ThoughtDef>

    <ThoughtDef Abstract="true" Name="PMMorphMemoryNone" ParentName="PMMorphMemoryBase">
        <nullifyingTraits>
            <!-- thought inherited from this will only recieve the thought if they don't have either MA or BP triats -->
            <li>MutationAffinity</li>
            <li>BodyPurist</li>
        </nullifyingTraits>
    </ThoughtDef>
	
    <ThoughtDef Abstract="true" Name="PMMorphMemoryFurry" ParentName="PMMorphMemoryBase">
        <requiredTraits>
            <!--this one is for furries -->
            <li>MutationAffinity</li>
        </requiredTraits>
    </ThoughtDef>

    <ThoughtDef Abstract="true" Name="PMMorphMemoryBP" ParentName="PMMorphMemoryBase">
        <requiredTraits>
            <!-- this one is for body purists -->
            <li>BodyPurist</li>
        </requiredTraits>
    </ThoughtDef>
</Defs>