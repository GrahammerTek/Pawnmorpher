<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef>
        <defName>SapientAnimalAteKibble</defName>
        <showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>ate kibble</label>
                <description>I had to eat animal feed, now that I'm like this. I still want proper meals!</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
        <modExtensions>
            <li Class="Pawnmorph.DefExtensions.FormerHumanRestriction"> <!-- this thought is now only valid for former humans -->
            </li>
        </modExtensions>
    </ThoughtDef>
	
    <ThoughtDef>
        <defName>SapientAnimalNaked</defName>
        <showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>naked</label>
                <description>I know I'm covered in fur but...c'mon!</description>
				<baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
        <modExtensions>
            <li Class="Pawnmorph.DefExtensions.FormerHumanRestriction"> <!-- this thought is now only valid for sapient animals -->
                <raceFilter>
                    <isBlackList>true</isBlackList>
                    <filterList>
                        <li>Chicken</li>
                        <li>Iguana</li>
                        <li>Cobra</li>
                    </filterList>
                </raceFilter>
            </li>
        </modExtensions>
    </ThoughtDef>
    
