<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef Name="FH_NakedThought" Abstract="true">
        <workerClass>Pawnmorph.Thoughts.Worker_FHNaked</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <nullifyingTraits>
            <li>Nudist</li>
        </nullifyingTraits>
    </ThoughtDef>

    <ThoughtDef ParentName="FH_NakedThought">
        <defName>SapientAnimalNaked</defName>
        <stages>
            <li>
                <label>naked</label>
                <description>I know I'm covered in fur but...c'mon!</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
            <!--  you can now add varients for different sapient levels like in the example 
            <li>
                <label>mostly sapient</label>
                <description>Something's tugging at my mind...it's the animal.</description>
            </li>
            <li>
                <label>conflicted mind</label>
                <description>I shouldn't give in but it's...getting cloudy in here.</description>
            </li>
            <li>
                <label>hard to think...</label>
                <description>Gotta...stay...focused but all I want to do is eat and sleep!</description>
            </li>
            <li>
                <label>feral animal</label>
                <description>...food?</description>
            </li>
            -->
        </stages>
        <modExtensions>
            <li Class="Pawnmorph.DefExtensions.FormerHumanRestriction">
                <!-- this thought is now only valid for sapient animals -->
                <raceFilter>
                    <isBlackList>true</isBlackList>
                    <filterList>
                        <li>Chicken</li>
                        <li>Iguana</li>
                        <li>Cobra</li>
                    </filterList>
                </raceFilter>
            </li>
        </modExtensions>
    </ThoughtDef>

    <ThoughtDef ParentName="FH_NakedThought">
        <defName>SapientChickenNaked</defName>
        <stages>
            <li>
                <label>naked</label>
                <description>I know I'm covered in feathers but...c'mon!</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
        <modExtensions>
            <li Class="Pawnmorph.DefExtensions.FormerHumanRestriction">
                <!-- this thought is now only valid for sapient animals -->
                <raceFilter>
                    <isBlackList>false</isBlackList>
                    <filterList>
                        <li>Chicken</li>
                    </filterList>
                </raceFilter>
            </li>
        </modExtensions>
    </ThoughtDef>

    <ThoughtDef ParentName="FH_NakedThought">
        <defName>SapientReptileNaked</defName>
        <stages>
            <li>
                <label>naked</label>
                <description>I know I'm covered in scales but...c'mon!</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
        <modExtensions>
            <li Class="Pawnmorph.DefExtensions.FormerHumanRestriction">
                <!-- this thought is now only valid for sapient animals -->
                <raceFilter>
                    <isBlackList>false</isBlackList>
                    <filterList>
                        <li>Iguana</li>
                        <li>Cobra</li>
                    </filterList>
                </raceFilter>
            </li>
        </modExtensions>
    </ThoughtDef>
</Defs>