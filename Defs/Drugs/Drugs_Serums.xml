<Defs>
	<ThingDef ParentName="SerumBase">
		<defName>RandomTransformer</defName>
		<label>mutaserum</label>
		<description>A serum filled with mechanites and animal DNA that causes random mutations. Use with caution, as leaving the mechanites unchecked may transform the user.</description>
		<graphicData>
			<texPath>Things/Item/Drug/Serum</texPath>
		</graphicData>
		<statBases>
			<WorkToMake>300</WorkToMake>
			<MarketValue>120</MarketValue>
		</statBases>
		<ingestible>
			<outcomeDoers>
				<li Class="Pawnmorph.IngestionOutcomeDoer_GiveHediffRandom">
					<runtime>
						<types>Full</types>
						<categories>
							<li>Powerful</li>
						</categories>
					</runtime>
					<severity>1.00</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<recipeMaker>
			<researchPrerequisite>SerumSynthesis</researchPrerequisite>
			<recipeUsers>
				<li>MutagenLab</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<MechaniteSlurry>1</MechaniteSlurry>
		</costList>
		<comps>
			<li Class="CompProperties_Drug">
				<listOrder>1010</listOrder>
			</li>
		</comps>
	</ThingDef>
	
