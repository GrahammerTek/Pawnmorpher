<Defs>

  <RecipeDef>
		<defName>Make_SlurryFromMutonite</defName>
		<label>make slurry from mutonite</label>
		<description>Melt down a hunk of mutonite into a vial of slurry.</description>
		<jobString>Refining slurry from mutonite.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>2000</workAmount>
		<workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Mutanite</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mutanite</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MechaniteSlurry>1</MechaniteSlurry>
		</products>
	</RecipeDef>
