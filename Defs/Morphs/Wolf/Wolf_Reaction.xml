<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
  <!-- weird attributes are for telling VS,VSCode,N++ where the schema is -->
  

  <ThoughtDef ParentName="OutlookMemoryBase">
    <!-- this will be the default memory given when a pawn changes to a hybrid race -->
    <defName>WolfMorphTfReaction</defName> <!--this is a memory and can be added the same as any other -->
    <durationDays>10</durationDays>
    <stages>
      <li>
        <label>changed</label>
        <description>Grrrf? I feel...wolfish.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
      <li>
        <label>feeling odd</label>
        <description>I have a sudden urge to hunt sheep...</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>