<Defs>
	<HediffDef Name="SquirrelPart" ParentName="PawnmorphPart" Abstract="True">
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
				<morph>SquirrelMorph</morph>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="SquirrelPart">
		<defName>EtherSquirrelJaw</defName>
		<label>sciurine muzzle</label>
		<description>[PAWN_nameDef]'s face has completely reshaped into that of one resembling a squirrel's, complete with oversized front teeth.</description>
		<initialSeverity>0</initialSeverity>
		<stages>
			<li>
				<label>new</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.50</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.50</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.50</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>5</power>
						<cooldownTime>2</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
		<modExtensions>
			<li Class="Pawnmorph.MutationHediffExtension">
				<parts>
					<li>Jaw</li>
				</parts>
				<countToAffect>1</countToAffect>
				<categories>
					<li>Major</li>
				</categories>
			</li>
		</modExtensions>
	</HediffDef>

	<HediffDef ParentName="SquirrelPart">
		<defName>EtherSquirrelEar</defName>
		<description>[PAWN_nameDef]'s ears have grown into small wedges, flicking about to listen for the beating of wings.</description>
		<label>sciurine</label>
		<stages>
			<li>
				<partEfficiencyOffset>0.2</partEfficiencyOffset>
			</li>
		</stages>
		<modExtensions>
			<li Class="Pawnmorph.MutationHediffExtension">
				<parts>
					<li>Ear</li>
				</parts>
				<countToAffect>2</countToAffect>
				<categories>
					<li>Major</li>
				</categories>
			</li>
		</modExtensions>
	</HediffDef>

	<HediffDef ParentName="SquirrelPart">
		<defName>EtherSquirrelTail</defName>
		<label>sciurine tail</label>
		<description>A long fluffy tail curls up from [PAWN_nameDef]'s waist. [PAWN_pronoun] loves to curl it up around [PAWN_possessive]self and use it as a pillow while sleeping.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.02</offset>
					</li>
				</capMods>
				<statOffsets>
					<SocialImpact>+0.10</SocialImpact>
				</statOffsets>
			</li>
		</stages>
		<modExtensions>
			<li Class="Pawnmorph.MutationHediffExtension">
				<parts>
					<li>Tail</li>
				</parts>
				<countToAffect>1</countToAffect>
				<categories>
					<li>Major</li>
				</categories>
			</li>
		</modExtensions>
	</HediffDef>
</Defs>