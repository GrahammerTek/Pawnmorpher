<Defs>
	<HediffDef Name="SnakePart" ParentName="PawnmorphPart" Abstract="True">
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
				<morph>SnakeMorph</morph>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="SnakePart">
		<defName>EtherSnakeJaw</defName>
		<label>venomous mout</label>
		<description>Long hollow fangs protrude from [PAWN_nameDef]'s elongated face, causing saliva to drip from between their scaly lips.</description>
		<initialSeverity>0</initialSeverity>
		<stages>
			<li>
				<label>new</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.50</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<statOffsets>
					<SocialImpact>-0.10</SocialImpact>
				</statOffsets>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<statOffsets>
					<SocialImpact>-0.10</SocialImpact>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>venom-fangs</label>
						<capacities>
							<li>ToxicBite</li>
						</capacities>
						<power>12</power>
						<cooldownTime>2</cooldownTime>
						<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
						<surpriseAttack>
							<extraMeleeDamages>
								<li>
									<def>Stun</def>
									<amount>14</amount>
								</li>
							</extraMeleeDamages>
						</surpriseAttack>
					</li>
				</tools>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="SnakePart">
		<defName>EtherSnakeHood</defName>
		<description>A large swooping hood engulfs [PAWN_nameDef]'s head, making them look rather intimidating.</description>
		<label>cobra hood</label>
		<!--Needs Stats-->
	</HediffDef>

	<HediffDef ParentName="SnakePart">
		<defName>EtherSnakeTail</defName>
		<label>fluffy tail</label>
		<description>A large and muscular tail has replaced [PAWN_nameDef]'s legs, making their lower half look like that of a snake.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef ParentName="PawnmorphPart">
		<defName>EtherSnakeHand</defName>
		<label>snake head</label>
		<description>The venomous head of a snake has replaced [PAWN_nameDef]'s hand.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>snake hand</label>
						<capacities>
							<li>ToxicBite</li>
						</capacities>
						<power>8</power>
						<cooldownTime>2</cooldownTime>
						<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
						<surpriseAttack>
							<extraMeleeDamages>
								<li>
									<def>Stun</def>
									<amount>14</amount>
								</li>
							</extraMeleeDamages>
						</surpriseAttack>
					</li>
				</tools>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef ParentName="SnakePart">
		<defName>EtherSnakeEye</defName>
		<label>elapine eye</label>
		<description>[PAWN_nameDef]'s eyes have become luminescent, and their pupils have become small vertical slits.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>