<Defs>

	<ChemicalDef>
		<defName>RandomTransformerChemical</defName>
		<label>mutaserum</label>
		<addictionHediff>SerumAddiction</addictionHediff>
		<canBinge>false</canBinge>
	</ChemicalDef>
	
	<NeedDef ParentName="DrugAddictionNeedBase">
		<defName>Chemical_TransformerSerums</defName>
		<needClass>Need_Chemical</needClass>
		<label>serumdrunk</label>
		<description>This person is under the strange effects of mechanite serum. They will require more (which will change them), but failure to keep them sated will push them over the edge.</description>
		<listPriority>45</listPriority>
		<fallPerDay>0.15</fallPerDay>
	</NeedDef>
	
	<HediffDef ParentName="AddictionBase">
		<defName>SerumAddiction</defName>
		<hediffClass>Hediff_Addiction</hediffClass>
		<label>serum addiction</label>
		<causesNeed>Chemical_TransformerSerums</causesNeed>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.0333</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>withdrawal</label>
				<painFactor>1</painFactor>
				<hungerRateFactorOffset>-0.7</hungerRateFactorOffset>
				<socialFightChanceFactor>25</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>Binging_Food</mentalState>
						<mtbDays>5</mtbDays>
					</li>
				</mentalStateGivers>
				<statOffsets>
					<GlobalLearningFactor>-0.9</GlobalLearningFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
	<ThingDef ParentName="DrugPillBase">
		<defName>RandomTransformer</defName>
		<label>mutaserum</label>
		<description>A serum which can mutate pawns with various effects. This one has no specific slant to it. Use with caution, as the mutations will often not stop at a handful, and you may end up with a full animal instead.</description>
		<graphicData>
			<texPath>Things/Item/Drug/Serum</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<thingCategories>
			<li>Artifacts</li>
		</thingCategories>
		<statBases>
			<WorkToMake>300</WorkToMake>
			<MarketValue>120</MarketValue>
			<Mass>0.01</Mass>
		</statBases>
		<techLevel>Ultra</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
				<li Class="Pawnmorph.IngestionOutcomeDoer_GiveHediffRandom">
					<hediffDefs>
						<li>PawnmorphFoxTF</li>
						<li>PawnmorphHuskyTF</li>
						<li>PawnmorphWargTF</li>
						<li>PawnmorphWolfTF</li>
						<li>PawnmorphBearTF</li>
						<li>PawnmorphBoarTF</li>
						<li>PawnmorphChickenTF</li>
						<li>PawnmorphCowTF</li>
						<li>PawnmorphPigTF</li>
						<li>PawnmorphDeerTF</li>
						<li>PawnmorphAlpacaTF</li>
						<li>PawnmorphBoomalopeTF</li>
					</hediffDefs>
					<severity>1.00</severity>
				</li>
