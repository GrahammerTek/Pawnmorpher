            <texPath>Things/Item/TFGun</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Revolver</soundInteract>
        <statBases>
            <MarketValue>650</MarketValue>
            <WorkToMake>8000</WorkToMake>
            <Mass>1.2</Mass>
