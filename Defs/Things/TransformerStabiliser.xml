<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>MutagenStabiliser</defName>
    <label>mutagen stabiliser</label>
    <description>This specially developed serum will prevent further mutations from occuring to the affected pawn for a period of five days, and will also remove any active mutagenic mechanites from the body.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Penoxycyline</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>18</MarketValue>
      <Mass>0.005</Mass>
      <Flammability>0.7</Flammability>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>StabiliserHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>Stabilisation</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
	<MechaniteSlurry>1</MechaniteSlurry>
      <Neutroamine>2</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>
          <min>0.08</min>
          <max>0.14</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  
  <HediffDef>
    <defName>StabiliserHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>mutagen stabilised</label>
    <defaultLabelColor>(179,86,132)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
