                    <li>Production</li>
                    <li>Chimera</li>
                    <li>Combat</li>
                </morphCategories>
                <mutationCategories>
                    <li>Productive</li>
                    <li>Exotic</li>
                    <li>Combat</li>
                </mutationCategories>
            </li>
        </modExtensions>
	</AlienRace.BackstoryDef>

