<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="AnseriformJawPart">
		<defName>EtherChickenBeak</defName>
		<classInfluence>ChookMorph</classInfluence>
		<label>chicken beak</label>
		<graphics>
			<Muzzle>Parts/chickenface/chickenface</Muzzle>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>A beak graces [PAWN_nameDef]'s face, like that of an ostrich. They may bok and squawk about birdlike things. The strange shape makes speaking very difficult.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>A beak graces [PAWN_nameDef]'s face, like that of an ostrich. They may bok and squawk about birdlike things. Adapting to it has made speaking less frustrating.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>A beak graces [PAWN_nameDef]'s face, like that of an ostrich. They may bok and squawk about birdlike things. With further adaptation, [PAWN_nameDef] has learned to speak normally.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="AnseriformTailPart">
		<defName>EtherChickenTailfeathers</defName>
		<classInfluence>ChookMorph</classInfluence>
		<label>chicken tailfeathers</label>
		<graphics>
			<Tail>Parts/chickenface/chickentail</Tail>
		</graphics>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="AnseriformEarPart">
		<defName>EtherChickenEar</defName>
		<classInfluence>ChookMorph</classInfluence>
		<label>chicken earhole</label>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<defName>EtherEggLayer</defName>
		<classInfluence>ChookMorph</classInfluence>
		<label>egglayer</label>
		<description>[PAWN_nameDef] can now lay eggs. Don't ask, don't tell. It's rather embarrassing.</description>
		<parts>
			<li>Pelvis</li>
		</parts>
		<comps>
			<li Class="Pawnmorph.HediffCompProperties_Production">
				<thought>LaidEgg</thought>
				<jobGiver>Pawnmorph.Jobs.Giver_LayEgg</jobGiver>
				<genderAversion>Male</genderAversion>
				<wrongGenderThought>LaidEggMale</wrongGenderThought>
				<etherBondThought>LaidEggBond</etherBondThought>
				<etherBrokenThought>LaidEggBroken</etherBrokenThought>
				<stages>
					<li>
						<daysToProduce>1</daysToProduce>
						<amount>1</amount>
						<resource>EggChickenUnfertilized</resource>
						<rareResource>TFEgg</rareResource>
						<chance>50</chance>
					</li>
					<li>
						<daysToProduce>0.5</daysToProduce>
						<amount>1</amount>
						<resource>EggChickenUnfertilized</resource>
						<rareResource>TFEgg</rareResource>
						<chance>70</chance>
					</li>
					<li>
						<daysToProduce>0.2</daysToProduce>
						<amount>1</amount>
						<resource>EggChickenUnfertilized</resource>
						<rareResource>TFEgg</rareResource>
						<chance>90</chance>
					</li>
					<li>
						<daysToProduce>0.1</daysToProduce>
						<amount>1</amount>
						<resource>EggChickenUnfertilized</resource>
						<rareResource>TFEgg</rareResource>
						<chance>99</chance>
						<thought>ProductiveBliss</thought>
					</li>
				</stages>
			</li>
		</comps>
		<initialSeverity>0.01</initialSeverity>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0</minSeverity>
				<hungerRateFactor>1.0</hungerRateFactor>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.3</minSeverity>
				<hungerRateFactor>1.3</hungerRateFactor>
				<label>productive</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.6</minSeverity>
				<hungerRateFactor>1.6</hungerRateFactor>
				<label>very productive</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.9</minSeverity>
				<hungerRateFactor>2.0</hungerRateFactor>
				<label>productive bliss</label>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>CatatonicBreakdown</hediff>
						<minSeverity>0.50</minSeverity>
						<baseMtbDays>2</baseMtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
