<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name ="AvianJawPart" ParentName="AnimalJawPart" Abstract="true">
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef Name ="AvianEarPart" ParentName="AnimalEarPart" Abstract="true">
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef Name ="AvianTailPart" ParentName="AnimalTailPart" Abstract="true">
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<defName>EtherWing</defName>
		<label>wing</label>
		<description>An avian wing.</description>
		<parts>
			<li>Arm</li>
		</parts>
		<classInfluence>Avian</classInfluence>
		<mutationTale>ArmBecomsWing</mutationTale>
		<mutationMemory>EtherWingMemory</mutationMemory>
		<categories>
			<li>Major</li>
		</categories>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>changing</label>
				<description>[PAWN_nameDef]'s arm is significantly stiffer and visibly longer then before </description>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>unfamiliar</label>
				<description>[PAWN_nameDef]'s arm has contorted into the shape of an avian wing, complete with hollow bones.  It'll take some time for [PAWN_objective] to get used to them again.</description>
				<partEfficiencyOffset>-0.3</partEfficiencyOffset>
				<statFactors>
					<CarryingCapacity>0.7</CarryingCapacity>
				</statFactors>
				<minSeverity>0.5</minSeverity>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.7</minSeverity>
				<label>wing</label>
				<description>[PAWN_nameDef]'s arm has contorted into the shape of an avian wing, complete with hollow bones.  [PAWN_pronoun] has adapted to using them, but the hollow bones limit [PAWN_possessive] ability to lift heavy things.</description>
				<statFactors>
					<CarryingCapacity>0.7</CarryingCapacity>
				</statFactors>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<!-- adaption cream -->
				<minSeverity>1.5</minSeverity>
				<labelOverride>sturdy wing</labelOverride>
				<description>[PAWN_nameDef]'s arm has contorted into the shape of an avian wing, but several adaptions have stiffened the hollow bones.  They're stronger than before, but still not as good as a regular arm.</description>
				<statFactors>
					<CarryingCapacity>0.9</CarryingCapacity>
				</statFactors>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<!-- Paragon -->
				<minSeverity>2.5</minSeverity>
				<labelOverride>reinforced wing</labelOverride>
				<description>[PAWN_nameDef]'s arm has contorted into the shape of an avian wing, but further adaptions to the hollow bones have rendered it as strong as a human arm despite its reduced weight.</description>
			</li>
		</stages>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationDependency">
				<mutationDependency>
					<hediff>EtherWingTip</hediff>
					<mtbDays>3</mtbDays>
					<chance>5</chance>
					<partsToAffect>
						<li>Hand</li>
					</partsToAffect>
					<countToAffect>2</countToAffect>
					<memory>WingTipMemory</memory>
					<tale>HandsBecomeWingTips</tale>
				</mutationDependency>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.20</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<defName>EtherAvianFoot</defName>
		<label>avian</label>
		<description>An avian foot.</description>
		<parts>
			<li>Foot</li>
		</parts>
		<classInfluence>Avian</classInfluence>
		<mutationTale>FeetBecomeTalons</mutationTale>
		<mutationMemory>AvianFootMemory</mutationMemory>
		<categories>
			<li>Major</li>
		</categories>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>scaly</labelOverride>
				<description>[PAWN_nameDef]'s foot appears to have broken out into hives, but doesn't seem to itch.</description>
				<stopChance>0.3</stopChance>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.5</minSeverity>
				<labelOverride>toe-foot</labelOverride>
				<description>[PAWN_nameDef]'s toes have become long, thin and scaly. Most of the main meat of [PAWN_possessive] foot has disappeared as well, leaving it looking more avian than human.</description>
				<stopChance>0.3</stopChance>
				<partEfficiencyOffset>0.04</partEfficiencyOffset>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1.0</minSeverity>
				<description>[PAWN_nameDef]'s foot has been replaced with an avian-looking claw. Despite its appearance, it proves quite useful for normal ambulatory function as well as for combative purposes.</description>
				<partEfficiencyOffset>0.1</partEfficiencyOffset>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1.5</minSeverity>
				<labelOverride>manipulative avian</labelOverride>
				<description>[PAWN_nameDef]'s toes stretch out into long birdlike claws, perfect for grasping things or scratching at people's faces.</description>
				<partEfficiencyOffset>0.1</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>avian claws</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>5.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.15</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<defName>EtherWingTip</defName>
		<label>wingtip</label>
		<description>[PAWN_nameDef]'s fingers have mostly disappeared into a lump of bird-skinned flesh, with many feathers protruding from the nub.</description>
		<classInfluence>Avian</classInfluence>
		<parts>
			<li>Hand</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>changing</label>
				<description>[PAWN_nameDef]'s fingers have shrunken down significantly, making manipulating things much harder.</description>
				<partEfficiencyOffset>-0.55</partEfficiencyOffset>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1</minSeverity>
				<label>adjusted</label>
				<partEfficiencyOffset>-0.85</partEfficiencyOffset>
				<!-- almost useless nub -->
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1.5</minSeverity>
				<!-- adaption cream -->
				<!-- only pawns with the Paragon aspect or adaption cream can get this stage -->
				<label>feather fingers</label>
				<partEfficiencyOffset>-0.25</partEfficiencyOffset>
				<description>Further adaption to this wingtip has given [PAWN_nameDef] several stiff feathers that [PAWN_pronoun] can manipulate.  [PAWN_pronoun] can use them sort of like fingers, but being nothing more than feathers they have a hard time really grasping anything.</description>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>2.5</minSeverity>
				<!-- Paragon -->
				<label>paragon</label>
				<description>Even further adaption has rendered [PAWN_nameDef]'s feather fingers remarkably stiff and flexible, and they now work almost as well as actual fingers.  [PAWN_nameDef] looks a lot like a cartoon character when [PAWN_pronoun] picks things up, but it's a small price to pay to have working hands again.</description>
				<partEfficiencyOffset>-0.05</partEfficiencyOffset>
				<!-- still not quite as good as hands -->
			</li>
		</stages>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.15</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphSkinPart">
		<defName>EtherFeatheredLimb</defName>
		<label>feathers</label>
		<description>Rows of feathers have sprouted over this limb, keeping in some warmth...</description>
		<classInfluence>Avian</classInfluence>
		<parts>
			<li>Torso</li>
			<li>Head</li>
			<li>Ear</li>
			<li>Arm</li>
			<li>Hand</li>
			<li>Leg</li>
			<li>Foot</li>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>isolated</label>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.02</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>bristles</label>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.04</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>patches</label>
				<minSeverity>0.4</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.08</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>swathes</label>
				<minSeverity>0.6</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-0.16</ComfyTemperatureMin>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>covered</label>
				<minSeverity>0.8</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-.36</ComfyTemperatureMin>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>

</Defs>