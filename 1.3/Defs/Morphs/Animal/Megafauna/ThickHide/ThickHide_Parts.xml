<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name ="ThickHideJawPart" ParentName="MegafaunaJawPart" Abstract="true">
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef Name ="ThickHideEarPart" ParentName="MegafaunaEarPart" Abstract="true">
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef Name ="ThickHideTailPart" ParentName="MegafaunaTailPart" Abstract="true">
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphSkinPart">
		<defName>EtherThickHideLimb</defName>
		<description>A very thick, rough and leathery skin now covers this limb, adding a substantial natural defense.</description>
		<label>thick hide</label>
		<classInfluence>ThickHide</classInfluence>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
		<parts>
			<li>Torso</li>
			<li>Head</li>
			<li>Ear</li>
			<li>Arm</li>
			<li>Hand</li>
			<li>Leg</li>
			<li>Foot</li>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>spots</label>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.02</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>patches</label>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<ArmorRating_Blunt>0.01</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>bristles</label>
				<minSeverity>0.4</minSeverity>
				<statOffsets>
					<ArmorRating_Blunt>0.02</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.04</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>leathery</label>
				<minSeverity>0.6</minSeverity>
				<statOffsets>
					<ArmorRating_Blunt>0.03</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>covered</label>
				<minSeverity>0.8</minSeverity>
				<statOffsets>
					<ArmorRating_Blunt>0.04</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.06</ArmorRating_Sharp>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>

</Defs>