<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name ="SimianJawPart" ParentName="AnimalJawPart" Abstract="true">
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>4</power>
						<cooldownTime>2</cooldownTime>
						<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
					</li>
				</tools>
			</li>
		</comps>
		<stagePatches>
			<li function="modify">
				<stageKey>pressing</stageKey>
				<values>
					<description>[PAWN_nameDef] jaws are shifting, sticking out further than normal. Other more sublte changes have also begun on [PAWN_possesive] face, but it's hard to say what they are.</description>
					<graphics>
						<Muzzle>Parts/Partials/PartialMuzzle/TinySnout</Muzzle>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>growing</stageKey>
				<values>
					<description>An uncanny feeling of familiarity comes when looking at [PAWN_nameDef]'s face. Even as the changes continue something of the old [PAWN_nameDef] can still be seen.</description>
					<graphics>
						<Muzzle>Parts/Partials/PartialMuzzle/PartialMuzzle</Muzzle>
					</graphics>
					<painOffset>0.1</painOffset>
					<capMods>
						<li>
							<capacity>Talking</capacity>
							<offset>-0.1</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face looks vaguely human at a glance, but with a protruding jaw, a flattened nose, and a raised forhead ridge it's clear something has been monkeying around with [PAWN_possesive] DNA.</description>
					<verbOverrides>
						<li>
							<label>teeth</label>
							<power>2</power>
						</li>
					</verbOverrides>
					<capMods>
						<li>
							<capacity>Talking</capacity>
							<offset>-0.1</offset>
						</li>
						<li>
							<capacity>Eating</capacity>
							<offset>0.1</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face looks vaguely human at a glance, but with a protruding jaw, a flattened nose, and a raised forhead ridge it's clear something has been monkeying around with [PAWN_possesive] DNA.</description>
					<capMods>
						<li>
							<capacity>Eating</capacity>
							<offset>0.2</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face looks vaguely human at a glance, but with a protruding jaw, a flattened nose, and a raised forhead ridge it's clear something has been monkeying around with [PAWN_possesive] DNA.</description>
					<capMods>
						<li>
							<capacity>Eating</capacity>
							<offset>0.3</offset>
						</li>
					</capMods>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef Name ="SimianEarPart" ParentName="AnimalEarPart" Abstract="true">
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef Name ="SimianTailPart" ParentName="AnimalTailPart" Abstract="true">
		<stagePatches>
			<li function="modify">
				<stageKey>growing</stageKey>
				<values>
					<capMods>
						<li>
							<capacity>Manipulation</capacity>
							<offset>+0.025</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<capMods>
						<li>
							<capacity>Manipulation</capacity>
							<offset>+0.05</offset>
						</li>
					</capMods>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>