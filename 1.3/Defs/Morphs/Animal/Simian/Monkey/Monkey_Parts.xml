<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="SimianJawPart">
		<classInfluence>MonkeyMorph</classInfluence>
		<defName>EtherMonkeyJaw</defName>
		<label>monkey snout</label>
		<graphics>
			<Muzzle>Parts/monkeyface/monkeyface</Muzzle>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face has elongated into a monkey-like visage, making them look less evolved. The strange shape makes speaking very difficult.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face has elongated into a monkey-like visage, making them look less evolved. Adapting to it has made speaking less frustrating.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face has elongated into a monkey-like visage, making them look less evolved. With further adaptation, [PAWN_nameDef] has learned to speak normally.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="SimianEarPart">
		<classInfluence>MonkeyMorph</classInfluence>
		<defName>EtherMonkeyEar</defName>
		<label>monkey ear</label>
		<graphics>
			<!--Monkey ears do not need a behind-the-head version due to them being occluded by all normal heads.-->
			<LeftEar>Parts/Monkey/Monkey_Ear_Left</LeftEar>
			<LeftEarBehind>Parts/None/None</LeftEarBehind>
			<RightEar>Parts/Monkey/Monkey_Ear_Right</RightEar>
			<RightEarBehindHead>Parts/None/None</RightEarBehindHead>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>Though somewhat engorged, this ear looks somewhat like [PAWN_nameDef]'s own ear.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="SimianTailPart">
		<classInfluence>MonkeyMorph</classInfluence>
		<defName>EtherMonkeyTail</defName>
		<label>monkey tail</label>
		<graphics>
			<Tail>Parts/monkeyface/monkeytail</Tail>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A long dextrous tail extends from the base of [PAWN_nameDef]'s spine. It would help with climbing abiltiy, but nobody knows how to on the rim.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<classInfluence>MonkeyMorph</classInfluence>
		<defName>EtherMonkeyHand</defName>
		<label>dextrous hand</label>
		<description>[PAWN_nameDef]'s fingers have elongated into the semblence of a monkey's hand.</description>
		<parts>
			<li>Hand</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
			    <label>unfamiliar</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.99</minSeverity>
				<partEfficiencyOffset>+0.1</partEfficiencyOffset>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1.5</minSeverity> <!-- Adaption cream -->
			    <label>deft</label>
				<partEfficiencyOffset>+0.2</partEfficiencyOffset>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>2.5</minSeverity> <!-- Paragon -->
			    <label>paragon</label>
				<partEfficiencyOffset>+0.3</partEfficiencyOffset>
			</li>
		</stages>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<classInfluence>MonkeyMorph</classInfluence>
		<defName>EtherMonkeyFoot</defName>
		<label>dextrous toes</label>
		<description>[PAWN_nameDef]'s feet have reshaped themselves into what look to be hands. This make finding shoes somewhat difficult.</description>
		<parts>
			<li>Foot</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
