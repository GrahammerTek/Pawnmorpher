<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="BovidJawPart">
		<classInfluence>MuffaloMorph</classInfluence>
		<defName>EtherMuffaloSnout</defName>
		<label>muffalo snout</label>
		<graphics>
			<Muzzle>Parts/Muffalo/Muffalo_Jaw</Muzzle>
			<BirdJawOrnament>Parts/Muffalo/Muffalo_Headfloof_B</BirdJawOrnament>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>A muffalolike snout graces [PAWN_nameDef]'s face. The strange shape makes speaking very difficult.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>A muffalolike snout graces [PAWN_nameDef]'s face. Adapting to it has made speaking less frustrating.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>A muffalolike snout graces [PAWN_nameDef]'s face. With further adaptation, [PAWN_nameDef] has learned to speak normally.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="BovidEarPart">
		<classInfluence>MuffaloMorph</classInfluence>
		<defName>EtherMuffaloEar</defName>
		<label>muffalo ear</label>
		<graphics>
			<LeftEar>Parts/Muffalo/Muffalo_Ear_Left</LeftEar>
			<LeftEarBehind>Parts/Muffalo/Muffalo_Ear_Left_Behind</LeftEarBehind>
			<RightEar>Parts/Muffalo/Muffalo_Ear_Right</RightEar>
			<RightEarBehindHead>Parts/Muffalo/Muffalo_Ear_Right_Behind</RightEarBehindHead>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A large wooly ear that belongs to a muffalo. Who knew muffalo had ears beneath all that wool?</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="BovidTailPart">
		<classInfluence>MuffaloMorph</classInfluence>
		<defName>EtherMuffaloTail</defName>
		<label>muffalo tail</label>
		<graphics>
			<Tail>Parts/Yak/Yak_Tail</Tail>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A muffalolike tail. It swats at flies and hangs low at their legs.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="WoollyLimb">
		<defName>EtherMuffaloFur</defName>
		<classInfluence>MuffaloMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<defName>EtherMuffaloWooly</defName>
		<label>thick fur</label>
		<description>Thick fur grows over [PAWN_nameDef]'s body constantly. They can shave themselves, but keeping it short is a futile effort.</description>
		<initialSeverity>0.01</initialSeverity>
		<mutationTale>StartsGrowingWool</mutationTale>
		<mutationMemory>EtherWooly</mutationMemory>
		<comps>
			<li Class="Pawnmorph.HediffCompProperties_Production">
				<thought>ShavedMyself</thought>
				<etherBondThought>ShavedMyselfBond</etherBondThought>
				<etherBrokenThought>ShavedMyselfBroken</etherBrokenThought>
				<stages>
					<li>
						<daysToProduce>2</daysToProduce>
						<amount>15</amount>
						<resource>WoolMuffalo</resource>
					</li>
					<li>
						<daysToProduce>1</daysToProduce>
						<amount>12</amount>
						<resource>WoolMuffalo</resource>
					</li>
					<li>
						<daysToProduce>0.5</daysToProduce>
						<amount>7</amount>
						<resource>WoolMuffalo</resource>
					</li>
					<li>
						<daysToProduce>0.25</daysToProduce>
						<amount>4</amount>
						<resource>WoolMuffalo</resource>
						<thought>ProductiveBliss</thought>
					</li>
				</stages>
			</li>
		</comps>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0</minSeverity>
				<hungerRateFactor>1.0</hungerRateFactor>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.3</minSeverity>
				<hungerRateFactor>1.3</hungerRateFactor>
				<label>productive</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.6</minSeverity>
				<hungerRateFactor>1.6</hungerRateFactor>
				<label>very productive</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.9</minSeverity>
				<hungerRateFactor>2.0</hungerRateFactor>
				<label>productive bliss</label>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>CatatonicBreakdown</hediff>
						<minSeverity>0.50</minSeverity>
						<baseMtbDays>2</baseMtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
		<parts>
			<li>Torso</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
