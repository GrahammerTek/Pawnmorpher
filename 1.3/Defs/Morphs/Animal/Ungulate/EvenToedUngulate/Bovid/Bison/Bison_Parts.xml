<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="BovidJawPart">
		<classInfluence>BisonMorph</classInfluence>
		<defName>EtherBisonSnout</defName>
		<label>bison snout</label>
		<graphics>
			<Muzzle>Parts/Bison/Bison_jaw</Muzzle>
			<BirdJawOrnament>Parts/Bison/Bison_Foreheadhair</BirdJawOrnament>
		</graphics>
				<stagePatches>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>A bisonlike snout graces [PAWN_nameDef]'s face. The strange shape makes speaking very difficult.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>A bisonlike snout graces [PAWN_nameDef]'s face. Adapting to it has made speaking less frustrating.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>A bisonlike snout graces [PAWN_nameDef]'s face. With further adaptation, [PAWN_nameDef] has learned to speak normally.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="BovidEarPart">
		<classInfluence>BisonMorph</classInfluence>
		<defName>EtherBisonEar</defName>
		<label>bison ear</label>
		<graphics>
			<LeftEar>Parts/Bison/Bison_Ear_Left</LeftEar>
			<LeftEarBehind>Parts/Bison/Bison_Ear_Left_Behind</LeftEarBehind>
			<RightEar>Parts/Bison/Bison_Ear_Right</RightEar>
			<RightEarBehindHead>Parts/Bison/Bison_Ear_Right_Behind</RightEarBehindHead>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A large tan ear that belongs to a bison. It flicks idly.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="BovidTailPart">
		<classInfluence>BisonMorph</classInfluence>
		<defName>EtherBisonTail</defName>
		<label>bison tail</label>
		<graphics>
			<Tail>Parts/Bison/Bison_Tail</Tail>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A bisonlike tail. A tuft of fur puffs out at the end.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<defName>EtherBisonWooly</defName>
		<label>thick fur</label>
		<description>Thick fur grows over [PAWN_nameDef]'s body constantly. Luckily, they can shave themselves to manage it.</description>
		<initialSeverity>0.01</initialSeverity>
		<mutationTale>StartsGrowingWool</mutationTale>
		<mutationMemory>EtherWooly</mutationMemory>
		<comps>
			<li Class="Pawnmorph.HediffCompProperties_Production">
				<thought>ShavedMyself</thought>
				<etherBondThought>ShavedMyselfBond</etherBondThought>
				<etherBrokenThought>ShavedMyselfBroken</etherBrokenThought>
				<stages>
					<li>
						<daysToProduce>2</daysToProduce>
						<amount>12</amount>
						<resource>WoolBison</resource>
					</li>
					<li>
						<daysToProduce>1</daysToProduce>
						<amount>7</amount>
						<resource>WoolBison</resource>
					</li>
					<li>
						<daysToProduce>0.5</daysToProduce>
						<amount>4</amount>
						<resource>WoolBison</resource>
					</li>
					<li>
						<daysToProduce>0.25</daysToProduce>
						<amount>3</amount>
						<resource>WoolBison</resource>
						<thought>ProductiveBliss</thought>
					</li>
				</stages>
			</li>
		</comps>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0</minSeverity>
				<hungerRateFactor>1.0</hungerRateFactor>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.3</minSeverity>
				<hungerRateFactor>1.3</hungerRateFactor>
				<label>productive</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.6</minSeverity>
				<hungerRateFactor>1.6</hungerRateFactor>
				<label>very productive</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.9</minSeverity>
				<hungerRateFactor>2.0</hungerRateFactor>
				<label>productive bliss</label>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>CatatonicBreakdown</hediff>
						<minSeverity>0.50</minSeverity>
						<baseMtbDays>2</baseMtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
		<parts>
			<li>Torso</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<defName>EtherBisonHorns</defName>
		<label>horns</label>
		<description>Two horns grow from the sides of [PAWN_nameDef]'s head.</description>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
			</li>
		</stages>
		<parts>
			<li>Skull</li>
		</parts>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>gored</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>20.0</power>
						<cooldownTime>3</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
