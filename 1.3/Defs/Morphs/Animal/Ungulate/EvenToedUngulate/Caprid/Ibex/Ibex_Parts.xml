<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="CapridJawPart">
		<classInfluence>IbexMorph</classInfluence>
		<defName>EtherIbexSnout</defName>
		<label>ibex snout</label>
		<graphics>
			<Muzzle>Parts/Ibex/Ibex_Jaw</Muzzle>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>A snout graces [PAWN_nameDef]'s face, like that of an ibex. The strange shape makes speaking very difficult.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>A snout graces [PAWN_nameDef]'s face, like that of an ibex. Adapting to it has made speaking less frustrating.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>A snout graces [PAWN_nameDef]'s face, like that of an ibex. With further adaptation, [PAWN_nameDef] has learned to speak normally.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="CapridEarPart">
		<classInfluence>IbexMorph</classInfluence>
		<defName>EtherIbexEar</defName>
		<label>ibex ear</label>
		<graphics>
			<LeftEar>Parts/Ibex/Ibex_Ear_Left</LeftEar>
			<LeftEarBehind>Parts/Ibex/Ibex_Ear_Left_Behind</LeftEarBehind>
			<RightEar>Parts/Ibex/Ibex_Ear_Right</RightEar>
			<RightEarBehindHead>Parts/Ibex/Ibex_Ear_Right_Behind</RightEarBehindHead>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A fluffy, caprine ear sits at the side of [PAWN_nameDef]'s head, like that of an ibex.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="CapridTailPart">
		<classInfluence>IbexMorph</classInfluence>
		<defName>EtherIbexTail</defName>
		<label>ibex tail</label>
		<graphics>
			<Tail>Parts/Ibex/Ibex_Tail</Tail>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A tail like that of an Ibex goat. It's very wooly but short and not very useful.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	
	<Pawnmorph.Hediffs.MutationDef ParentName="CapridHornPart">
		<defName>EtherIbexHorns</defName>
		<classInfluence>IbexMorph</classInfluence>
		<label>ibex horns</label>
		<description>The curved horns of an ibex. They start small, but will eventually grow to full size. Horn growth does not require the constant work of mutagenic mechanites.</description>
		<!-- <mutationTale>TODO</mutationTale>
		<mutationMemory>TODO</mutationMemory> -->
		<stagePatches>
			<li function="modify">
				<stageKey>nubs</stageKey>
				<values>
					<graphics>
						<horns>Parts/Ibex/Ibex_Horn_A</horns>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>short</stageKey>
				<values>
					<description>Curved horns decorate [PAWN_nameDef]'s head, which add a heft to a headbutt. They have grown larger, but still have a little more growing to do.</description>
					<graphics>
						<horns>Parts/Ibex/Ibex_Horn_B</horns>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>horns</stageKey>
				<values>
					<description>Caprine horns decorate [PAWN_nameDef]'s head, which add a heft to a headbutt. They have reached their full size.</description>
					<graphics>
						<horns>Parts/Ibex/Ibex_Horn_C</horns>
					</graphics>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
