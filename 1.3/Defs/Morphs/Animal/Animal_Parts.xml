<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name ="AnimalJawPart" ParentName="PawnmorphJawPart" Abstract="true">
		<graphics>
			<Muzzle>Parts/None/None</Muzzle>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>initial</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face is itching a bit, but nothing strange has happened yet.</description>
					<graphics>
						<Muzzle>Parts/None/None</Muzzle>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>pressing</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face seems to be swelling, the nose and jaw pressing out and looking decidedly more like an animal's.</description>
					<capMods>
						<li>
							<capacity>Talking</capacity>
							<offset>-0.05</offset>
						</li>
						<li>
							<capacity>Eating</capacity>
							<offset>0.1</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>growing</stageKey>
				<values>
					<description>[PAWN_nameDef]'s face continues to change, looking more and more like an animal's.</description>
					<capMods>
						<li>
							<capacity>Talking</capacity>
							<offset>-0.1</offset>
						</li>
						<li>
							<capacity>Eating</capacity>
							<offset>0.3</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>A snout graces [PAWN_nameDef]'s face, like that of an animal. Speaking is difficult, but eating is easier.</description>
					<capMods>
						<li>
							<capacity>Talking</capacity>
							<offset>-0.2</offset>
						</li>
						<li>
							<capacity>Eating</capacity>
							<offset>0.5</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>A snout graces [PAWN_nameDef]'s face, like that of an animal. Speaking is difficult, but eating is easier. Adaptation has removed some of the difficulty with talking</description>
					<capMods>
						<li>
							<capacity>Talking</capacity>
							<offset>-0.1</offset>
						</li>
						<li>
							<capacity>Eating</capacity>
							<offset>0.5</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>An imposing snout graces [PAWN_nameDef]'s face, like that of an animal.</description>
					<capMods>
						<li>
							<capacity>Eating</capacity>
							<offset>0.50</offset>
						</li>
					</capMods>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef Name ="AnimalEarPart" ParentName="PawnmorphEarPart" Abstract="true">
		<graphics>
			<LeftEarBehind>Parts/None/None</LeftEarBehind>
			<RightEar>Parts/None/None</RightEar>
			<RightEarBehindHead>Parts/None/None</RightEarBehindHead>
			<LeftEar>Parts/None/None</LeftEar>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>initial</stageKey>
				<values>
					<description>[PAWN_nameDef] has been scratching this ear a lot recently.</description>
					<graphics>
						<LeftEarBehind>Parts/None/None</LeftEarBehind>
						<RightEar>Parts/None/None</RightEar>
						<RightEarBehindHead>Parts/None/None</RightEarBehindHead>
						<LeftEar>Parts/None/None</LeftEar>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>pressing</stageKey>
