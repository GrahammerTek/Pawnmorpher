<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="LacertiliaJawPart">
		<classInfluence>IguanaMorph</classInfluence>
		<defName>EtherIguanaSnout</defName>
		<label>iguana snout</label>
		<graphics>
			<Muzzle>Parts/iguanaface/iguanaface</Muzzle>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>The lower part of [PAWN_nameDef]'s face has reformed into a scaly snout, like a iguana snout. The strange shape makes speaking very difficult.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>The lower part of [PAWN_nameDef]'s face has reformed into a scaly snout, like a iguana snout. Adapting to it has made speaking less frustrating.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>The lower part of [PAWN_nameDef]'s face has reformed into a scaly snout, like a iguana snout. With further adaptation, [PAWN_nameDef] has learned to speak normally.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="LacertiliaTailPart">
		<classInfluence>IguanaMorph</classInfluence>
		<defName>EtherIguanaTail</defName>
		<label>iguana tail</label>
		<graphics>
			<Tail>Parts/None/None</Tail>
			<BodyExtendingTail>Parts/iguanaface/iguanatail</BodyExtendingTail>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>TODO.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<classInfluence>IguanaMorph</classInfluence>
		<defName>EtherIguanaHorns</defName>
		<description>A series of spines drapes down [PAWN_nameDef]'s back.</description>
		<label>spines</label>
		<parts>
			<li>Skull</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart">
		<classInfluence>IguanaMorph</classInfluence>
		<defName>EtherIguanaFoot</defName>
		<label>reptilian foot</label>
		<description>The whole of [PAWN_nameDef]'s feet have become toes.</description>
		<parts>
			<li>Foot</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
