<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="ScavengerJawPart">
		<classInfluence>WargMorph</classInfluence>
		<defName>EtherWargMuzzle</defName>
		<label>warg muzzle</label>
		<description>The fearsome, toothy muzzle of a warg.</description>
		<graphics>
			<Muzzle>Parts/wargface/wargface</Muzzle>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>A snout graces [PAWN_nameDef]'s face, like that of a warg. [PAWN_possessive] teeth are pointed to suit; speaking is difficult outside of barks and whines, but eating is easier.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>A snout graces [PAWN_nameDef]'s face, like that of a warg. [PAWN_possessive] teeth are pointed to suit, making eating easier. Adaptation has removed some of the difficulty with speaking.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<description>A snout graces [PAWN_nameDef]'s face, like that of a warg. [PAWN_possessive] teeth are pointed to suit; speaking is a little more difficult, but eating is easier. [PAWN_pronoun] has also developed a taste for raw meat, and is less likely to get sick from it.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="ScavengerEarPart">
		<classInfluence>WargMorph</classInfluence>
		<defName>EtherWargEar</defName>
		<label>warg ear</label>
		<graphics>
			<LeftEar>Parts/Warg/Warg_Ear_Left</LeftEar>
			<LeftEarBehind>Parts/Warg/Warg_Ear_Left_Behind</LeftEarBehind>
			<RightEar>Parts/Warg/Warg_Ear_Right</RightEar>
			<RightEarBehindHead>Parts/Warg/Warg_Ear_Right_Behind</RightEarBehindHead>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>The rugged, pointed ear of a hungry warg.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="ScavengerTailPart">
		<classInfluence>WargMorph</classInfluence>
		<defName>EtherWargTail</defName>
		<label>tufted tail</label>
		<graphics>
			<Tail>Parts/wargface/wargtail</Tail>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A thin tail with a tuft of fur at the end.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="PM_StrongTorsoBase">
		<defName>PM_WargChest</defName>
		<classInfluence>WargMorph</classInfluence>
		<stages Inherit="false">
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>growing</labelOverride>
				<painOffset>0.1</painOffset>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>growing</labelOverride>
				<painOffset>0.1</painOffset>
				<minSeverity>0.1</minSeverity>
				<healthOffset>2</healthOffset>
				<statOffsets>
					<CarryingCapacity>1</CarryingCapacity>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>growing</labelOverride>
				<painOffset>0.05</painOffset>
				<minSeverity>0.5</minSeverity>
				<healthOffset>4</healthOffset>
				<statOffsets>
					<CarryingCapacity>5</CarryingCapacity>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1</minSeverity>
				<healthOffset>4</healthOffset>
				<statOffsets>
					<CarryingCapacity>15</CarryingCapacity>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1.5</minSeverity>
				<healthOffset>4</healthOffset>
				<statOffsets>
					<CarryingCapacity>17</CarryingCapacity>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>2</minSeverity>
				<healthOffset>8</healthOffset>
				<statOffsets>
					<CarryingCapacity>20</CarryingCapacity>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
