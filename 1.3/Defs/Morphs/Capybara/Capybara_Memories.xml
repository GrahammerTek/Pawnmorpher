<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>CapybaraTransformationMemory</defName>
        <stages>
            <li>
                <label>morphed</label>
                <description>I'm a.. Rodent of some kind? These teeth are awkward.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>I have a lovely coat of fur, even if it is a tad thin.</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>This is awful! Look at my teeth, what happened to my legs?! Help!</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>One step closer to the wild side.</description>
                <baseMoodEffect>+1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>CapybaraRevertedMemory</defName>
        <stages>
            <li>
                <label>reverted</label>
                <description>Back to normal, that fur was getting a bit itchy.</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>I miss my fur, it was nice and warm.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>Aah, back to normal. I've never missed my skin so much.</description>
                <baseMoodEffect>+10</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>No! I was so close! Why did they change me back?!</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherCapybaraJaw</defName>
        <stages>
            <li>
                <label>Rodent face</label>
                <description>What's up with these teeth?</description>
                <visible>True</visible>
                <baseMoodEffect>0</baseMoodEffect>
            </li>
            <li>
                <label>Rodent face</label>
                <description>I can eat whatever I want!</description>
                <visible>True</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Rodent face</label>
                <description>God, I look so ugly with this thing...</description>
                <visible>True</visible>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherCapybaraEar</defName>
        <stages>
            <li>
                <label>Rodent ears</label>
                <description>Why are my ears so small?</description>
                <visible>True</visible>
                <baseMoodEffect>0</baseMoodEffect>
            </li>
            <li>
                <label>Rodent ears</label>
                <description>These tiny ears are so cute!</description>
                <visible>True</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Rodent ears</label>
                <description>Does anyone have a hat I can hide these things under?</description>
                <visible>True</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    
</Defs>