<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">

	<!-- Strong torso (old) -->
	
	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphPart" Name="PM_StrongTorsoBase" Abstract="true">
        <label>strong chest</label>
        <description>[PAWN_nameDef]'s chest has bulked up significantly, making it not only stronger but more resistant to damage</description>
        <stages>
            <li Class="Pawnmorph.Hediffs.MutationStage">
                <labelOverride>growing</labelOverride>
                <painOffset>0.1</painOffset>
            </li>
            <li Class="Pawnmorph.Hediffs.MutationStage">
                <labelOverride>growing</labelOverride>
                <painOffset>0.1</painOffset>
                <minSeverity>0.1</minSeverity>
                <healthOffset>1</healthOffset>
                <statOffsets>
                    <CarryingCapacity>5</CarryingCapacity>
                </statOffsets>
            </li>
            <li Class="Pawnmorph.Hediffs.MutationStage">
                <labelOverride>growing</labelOverride>
                <painOffset>0.05</painOffset>
                <minSeverity>0.5</minSeverity>
                <healthOffset>2</healthOffset>
                <statOffsets>
                    <CarryingCapacity>10</CarryingCapacity>
                </statOffsets>
            </li>
            <li Class="Pawnmorph.Hediffs.MutationStage">
                <minSeverity>1</minSeverity>
                <healthOffset>4</healthOffset>
                <statOffsets>
                    <CarryingCapacity>15</CarryingCapacity>
                </statOffsets>
            </li>
        </stages>
        <parts>
            <li>Torso</li>
        </parts>
        <comps>
            <li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
                <severityPerDay>0.15</severityPerDay>
            </li>
        </comps>
    </Pawnmorph.Hediffs.MutationDef>

	<!-- Ear hole -->
	
    <Pawnmorph.Hediffs.MutationDef ParentName="AnimalEarPart" Name="PM_Earhole" Abstract="true">
		<label>ear hole</label>
		<description>TODO</description>
		<graphics>
			<LeftEarBehind>Parts/None/None</LeftEarBehind>
			<RightEar>Parts/None/None</RightEar>
			<RightEarBehindHead>Parts/None/None</RightEarBehindHead>
			<LeftEar>Parts/None/None</LeftEar>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>initial</stageKey>
				<values>
					<description>[PAWN_nameDef]'s ear is shrinking.</description>
					<graphics>
						<LeftEarBehind>Parts/None/None</LeftEarBehind>
						<RightEar>Parts/None/None</RightEar>
						<RightEarBehindHead>Parts/None/None</RightEarBehindHead>
						<LeftEar>Parts/None/None</LeftEar>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>pressing</stageKey>
				<values>
					<description>[PAWN_nameDef] no longer has a visible ear.</description>
					<graphics>
						<LeftEarBehind>Parts/None/None</LeftEarBehind>
						<RightEar>Parts/None/None</RightEar>
						<RightEarBehindHead>Parts/None/None</RightEarBehindHead>
						<LeftEar>Parts/None/None</LeftEar>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>growing</stageKey>
				<values>
					<description>[PAWN_nameDef]'s ear looks more and more like an animal ear hole.</description>
					<graphics>
						<LeftEarBehind>Parts/None/None</LeftEarBehind>
						<RightEar>Parts/None/None</RightEar>
						<RightEarBehindHead>Parts/None/None</RightEarBehindHead>
						<LeftEar>Parts/None/None</LeftEar>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>[PAWN_nameDef] now has a ear hole.</description>
				</values>
			</li>
		</stagePatches>
    </Pawnmorph.Hediffs.MutationDef>

	<!-- Egg Layer -->
	
	<Pawnmorph.Hediffs.MutationDef Name="EtherEggLayer" ParentName="PawnmorphPart" Abstract="true">
		<defName>EtherEggLayer</defName>
		<label>egglayer</label>
		<description>[PAWN_nameDef] can now lay eggs. Don't ask, don't tell. It's rather embarrassing.</description>
		<parts>
			<li>Pelvis</li>
		</parts>
		<initialSeverity>0.01</initialSeverity>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0</minSeverity>
				<hungerRateFactor>1.0</hungerRateFactor>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.3</minSeverity>
				<hungerRateFactor>1.3</hungerRateFactor>
				<label>productive</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.6</minSeverity>
				<hungerRateFactor>1.6</hungerRateFactor>
				<label>very productive</label>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>0.9</minSeverity>
				<hungerRateFactor>2.0</hungerRateFactor>
				<label>productive bliss</label>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>CatatonicBreakdown</hediff>
						<minSeverity>0.50</minSeverity>
						<baseMtbDays>2</baseMtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>

	<!-- Flexible spine -->
	
	<Pawnmorph.Hediffs.MutationDef ParentName ="PawnmorphMiscPart">
		<description>A very flexible spine.</description>
		<defName>EtherFlexibleSpine</defName>
		<classInfluence>Feline</classInfluence>
		<label>flexible spine</label>
		<parts>
			<li>Spine</li>
		</parts>
		<maxSeverity>1</maxSeverity>
		<categories>
			<li>Major</li>
		</categories>
		<stagePatches>
			<li function="modify">
				<stageKey>initial</stageKey>
				<values>
					<description>[PAWN_nameDef]'s back hurts a bit. Nothing too bad.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>growing</stageKey>
				<values>
					<label>changing</label>
					<description>[PAWN_nameDef] has difficulties controlling [PAWN_possesive] balance. It hurts whenever [PAWN_pronoun] is moving.</description>
					<painOffset>0.2</painOffset>
				</values>
			</li>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>[PAWN_nameDef]'s spine has become flexible. [PAWN_pronoun] would likely win a contortion contest.</description>
					<partEfficiencyOffset>0.15</partEfficiencyOffset>
					<statOffsets>
						<MeleeDodgeChance>0.15</MeleeDodgeChance>
				</statOffsets>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<!-- Reinforced Spine -->

	<Pawnmorph.Hediffs.MutationDef ParentName ="PawnmorphMiscPart">
		<description>A reinforced spine.</description>
		<defName>EtherReinforcedSpine</defName>
		<classInfluence>Equine</classInfluence>
		<label>reinforced spine</label>
		<parts>
			<li>Spine</li>
		</parts>
		<maxSeverity>1</maxSeverity>
		<categories>
			<li>Major</li>
		</categories>
		<stagePatches>
			<li function="modify">
				<stageKey>initial</stageKey>
				<values>
					<description>[PAWN_nameDef]'s back hurts a bit. Nothing too bad.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>growing</stageKey>
				<values>
					<label>changing</label>
					<description>[PAWN_nameDef]'s back is very painful, like if [PAWN_possesive]'s spine was rearranging.</description>
					<painOffset>0.2</painOffset>
				</values>
			</li>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>[PAWN_nameDef]'s spine is stronger than ever. [PAWN_pronoun] is now able to carry a lot, and fast!</description>
					<partEfficiencyOffset>0.2</partEfficiencyOffset>
					<statOffsets>
						<CaravanRidingSpeedFactor>0.75</CaravanRidingSpeedFactor>
						<CarryingCapacity>125</CarryingCapacity>
					</statOffsets>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
	
</Defs>