<?xml version="1.0" encoding="UTF-8" ?>
<Defs>
	
	<Pawnmorph.Social.PMInteractionWeightsDef>
		<defName>PMInteractionWeights_Rodent</defName>
		<requiredMutationsAny>
			<li>EtherCapybaraJaw</li>
			<!-- <li>EtherChinchillaJaw</li> -->
			<li>EtherRatSnout</li>
			<li>EtherSquirrelJaw</li>
		</requiredMutationsAny>
		<!-- Muzzles provide 0.5 weight, ears 0.125 each (0.25 for both), tails 0.25, and morphs get an additional +1, for a total of 2. A fully mutated-morph is thus 4x as likely to bark as a human with just a muzzle. A muzzled human will bark half as often as chatting and a full morph will bark twice as often as chatting -->
		<mutationWeights>
			<!-- Muzzles -->
			<li>
				<key>EtherRatSnout</key>
				<value>0.5</value>
			</li>
			<li>
				<key>EtherSquirrelJaw</key>
				<value>0.5</value>
			</li>
			<li>
				<key>EtherCapybaraJaw</key>
				<value>0.5</value>
			</li>
			
			<!-- Tails -->
			<li>
				<key>EtherRatTail</key>
				<value>0.25</value>
			</li>
			<li>
				<key>EtherSquirrelTail</key>
				<value>0.25</value>
			</li>

			<!-- Ears -->
			<li>
				<key>EtherRatEar</key>
				<value>0.125</value>
			</li>
			<li>
				<key>EtherSquirrelEar</key>
				<value>0.125</value>
			</li>
			<li>
				<key>EtherCapybaraEar</key>
				<value>0.125</value>
			</li>
		</mutationWeights>
		<morphWeights>
			<li>
				<key>RatMorph</key>
				<value>1</value>
			</li>
			<li>
				<key>SquirrelMorph</key>
				<value>1</value>
			</li>
			<li>
				<key>CapybaraMorph</key>
				<value>1</value>
			</li>
		</morphWeights>
	</Pawnmorph.Social.PMInteractionWeightsDef>

