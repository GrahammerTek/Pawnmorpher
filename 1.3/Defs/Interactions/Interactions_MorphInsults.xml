<?xml version="1.0" encoding="UTF-8" ?>
<Defs>

	<!-- insults directed at vulpine morphs -->
	<Pawnmorph.Social.PMInteractionDef ParentName="PMAnimalNoise_Insult">
		<defName>PMTalk_VulpineInsult</defName>
		<label>vulpine insult</label>
		<recipientThought>Insulted</recipientThought>
		<logRulesInitiator>
			<rulesStrings>
				<li>r_logentry->[INITIATOR_nameDef] [insulted] [RECIPIENT_nameDef]'s [vulpinecharacteristic].</li>
				<li>r_logentry->[INITIATOR_nameDef] [comparedtargetto] [insultcomparison].</li>
				<li>r_logentry->[INITIATOR_nameDef] [insult].</li>

				<li>comparedtargetto->called [RECIPIENT_nameDef] a</li>
				<li>comparedtargetto->compared [RECIPIENT_nameDef] to a</li>

				<li>insulted(p=3)->insulted</li>
				<li>insulted->openly insulted</li>
				<li>insulted->loudly insulted</li>
				<li>insulted->flagrantly insulted</li>
				<li>insulted->directly insulted</li>
				<li>insulted->viciously insulted</li>
				<li>insulted->flagrantly disrespected</li>
				<li>insulted->slandered</li>
				<li>insulted->hurled invective about</li>
				<li>insulted->derided</li>
				
				<li>vulpinecharacteristic->stench</li>
				<li>vulpinecharacteristic->shedding</li>
				<li>vulpinecharacteristic->screeching</li>
				<li>vulpinecharacteristic->tendency to mouth things</li>
				<li>vulpinecharacteristic->gross eating habits</li>
				<li>vulpinecharacteristic->annoying fox noises</li>
				<li>vulpinecharacteristic->weird eyes</li>
				<li>vulpinecharacteristic->giant ears</li>
				<li>vulpinecharacteristic->fleas</li>
				
				<li>insultcomparison->stinking fox</li>
				<li>insultcomparison->fox-fur scarf</li>
				<li>insultcomparison->big-eared noisemaker</li>
				<li>insultcomparison->petty thief</li>
				<li>insultcomparison->wild animal</li>
				<li>insultcomparison->rabid fox</li>
				<li>insultcomparison->mangy fleabag</li>
				
				<li>insult->complained that [RECIPIENT_nameDef] stinks like a skunk</li>
				<li>insult->yelled at [RECIPIENT_nameDef] to stop making annoying fox noises</li>
				<li>insult->told an insulting joke about [insultingjoketopics] around [RECIPIENT_nameDef]</li>
				
				<li>insultingjoketopics->thieving foxes</li>
				<li>insultingjoketopics->fox stench</li>
				<li>insultingjoketopics->foxes in henhouses</li>
			</rulesStrings>
		</logRulesInitiator>
		<recipientWeights>PMInteractionWeights_Vulpine</recipientWeights>
	</Pawnmorph.Social.PMInteractionDef>
</Defs>
