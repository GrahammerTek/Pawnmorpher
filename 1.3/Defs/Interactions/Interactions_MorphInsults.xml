<?xml version="1.0" encoding="UTF-8" ?>
<Defs>
	
	<ThoughtDef ParentName="PMAnimalNoise_InsultMemory">
		<defName>PMTalk_Insult</defName>
		<stages>
			<li>
				<label>insult</label>
				<baseOpinionOffset>-15</baseOpinionOffset>
			</li>
		</stages>
		<thoughtToMake>PMBark_InsultedMood</thoughtToMake>
	</ThoughtDef>
	
	<ThoughtDef ParentName="PMAnimalNoise_InsultedMood">
		<defName>PMTalk_InsultedMood</defName>
		<stages>
			<li>
				<label>insulted</label>
				<description>I've been directly insulted! What an awful person!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<!-- insults directed at canine morphs -->
	<Pawnmorph.Social.PMInteractionDef ParentName="PMAnimalNoise_Insult">
		<defName>PMTalk_CanineInsult</defName>
		<label>canine insult</label>
		<recipientThought>PMTalk_Insult</recipientThought>
		<logRulesInitiator>
			<rulesStrings>
				<li>r_logentry->[INITIATOR_nameDef] [insulted] [RECIPIENT_nameDef]'s [caninecharacteristic].</li>
				<li>r_logentry->[INITIATOR_nameDef] [comparedtargetto] [insultcomparison].</li>
				<li>r_logentry->[INITIATOR_nameDef] [insult].</li>

				<li>comparedtargetto->called [RECIPIENT_nameDef] a</li>
				<li>comparedtargetto->compared [RECIPIENT_nameDef] to a</li>

				<li>insulted(p=3)->insulted</li>
				<li>insulted->openly insulted</li>
				<li>insulted->loudly insulted</li>
				<li>insulted->flagrantly insulted</li>
				<li>insulted->directly insulted</li>
				<li>insulted->viciously insulted</li>
				<li>insulted->flagrantly disrespected</li>
				<li>insulted->slandered</li>
				<li>insulted->hurled invective about</li>
				<li>insulted->derided</li>
				
				<li>caninecharacteristic->stench</li>
				<li>caninecharacteristic->shedding</li>
				<li>caninecharacteristic->drooling</li>
				<li>caninecharacteristic->gross eating habits</li>
				<li>caninecharacteristic->disgusting dog behavior</li>
				<li>caninecharacteristic->fleas</li>
				
				<li>insultcomparison->stinking mutt</li>
				<li>insultcomparison->lapdog</li>
				<li>insultcomparison->dumb dog</li>
				<li>insultcomparison->poodle</li>
				<li>insultcomparison->glorified pet</li>
				<li>insultcomparison->mangy fleabag</li>
				
				<li>insult->complained that [RECIPIENT_nameDef] stinks like a wet dog</li>
				<li>insult->threatened to clip a leash on [RECIPIENT_nameDef]</li>
				<li>insult->threatened [RECIPIENT_nameDef] with a rolled up newspaper</li>
			</rulesStrings>
		</logRulesInitiator>
		<recipientWeights>PMInteractionWeights_Canine</recipientWeights>
	</Pawnmorph.Social.PMInteractionDef>
	
