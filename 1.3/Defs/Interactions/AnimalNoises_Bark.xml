<Defs>
	
	<InteractionDef Abstract="true">
		<defName>PawnmorphBarkBase</defName>
		<initiatorWeights>
			<requiredMutationsAny>
				<li>EtherHuskyMuzzle</li>
				<li>EtherLabradorRetrieverJaw</li>
				<li>EtherWargMuzzle</li>
				<li>EtherWolfMuzzle</li>
				<li>EtherArcticWolfJaw</li>
			</requiredMutationsAny>
			<!-- Muzzles provide 0.5 weight, ears 0.125 each (0.25 for both), tails 0.25, and morphs get an additional +1, for a total of 2.  A fully mutated-morph is thus 4x as likely to bark as a human with just a muzzle.  A muzzled human will bark half as often as chatting and a full morph will bark twice as often as chatting -->
			<mutationWeights>
				
				<!-- Muzzles -->
				<li>
					<key>EtherHuskyMuzzle</key>
					<value>0.5</value>
				</li>
				<li>
					<key>EtherLabradorRetrieverJaw</key>
					<value>0.5</value>
				</li>
				<li>
					<key>EtherWargMuzzle</key>
					<value>0.5</value>
				</li>
				<li>
					<key>EtherWolfMuzzle</key>
					<value>0.5</value>
				</li>
				<li>
					<key>EtherArcticWolfJaw</key>
					<value>0.5</value>
				</li>
				
				<!-- Ears -->
				<li>
					<key>EtherHuskyEar</key>
					<value>0.125</value>
				</li>
				<li>
					<key>EtherLabradorRetrieverEar</key>
					<value>0.125</value>
				</li>
				<li>
					<key>EtherWargEar</key>
					<value>0.125</value>
				</li>
				<li>
					<key>EtherWolfEar</key>
					<value>0.125</value>
				</li>
				
				<!-- Tails -->
				<li>
					<key>EtherHuskyTail</key>
					<value>0.25</value>
				</li>
				<li>
					<key>EtherLabradorRetrieverTail</key>
					<value>0.25</value>
				</li>
				<li>
					<key>EtherWargTail</key>
					<value>0.25</value>
				</li>
				<li>
					<key>EtherWolfTail</key>
					<value>0.25</value>
				</li>
				
			</mutationWeights>
			<morphWeights>
				<li>
					<key>HuskyMorph</key>
					<value>1</value>
				</li>
				<li>
					<key>LabMorph</key>
					<value>1</value>
				</li>
				<li>
					<key>WargMorph</key>
					<value>1</value>
				</li>
				<li>
					<key>WolfMorph</key>
					<value>1</value>
				</li>
				<li>
					<key>ArcticWolfMorph</key>
					<value>1</value>
				</li>
			</morphWeights>
			<requiresBoth>false</requiresBoth>
		</initiatorWeights>
		<requiresBoth>false</requiresBoth>
	</InteractionDef>
	
	<InteractionDef Parent="PawnmorphBarkBase">
		<defName>PawnmorphBark</defName>
		<label>bark</label>
		<workerClass>Pawnmorph.Social.InteractionWorker_Chitchat</workerClass>
		<symbol>Things/Mote/SpeechSymbols/Bark</symbol>
		<initiatorThought>PawnmorphBark</initiatorThought>
		<initiatorXpGainSkill>Social</initiatorXpGainSkill>
		<initiatorXpGainAmount>4</initiatorXpGainAmount>
		<recipientThought>PawnmorphBark</recipientThought>
		<logRulesInitiator>
			<rulesStrings>
				<li>r_logentry->[INITIATOR_nameDef] [talkedabout] [RECIPIENT_nameDef].</li>
				<li>r_logentry->[INITIATOR_nameDef] asked [RECIPIENT_nameDef] about [askedabout].</li>

				<li>talkedabout(p=4)->barked at</li>
				<li>talkedabout->woofed at</li>
				<li>talkedabout->arfed to</li>
				<li>talkedabout->howled at</li>
				<li>talkedabout->ruffed at</li>
				<li>talkedabout->growled at</li>
				<li>talkedabout->sniffed</li>
				<li>talkedabout->wagged [INITIATOR_possessive] tail at</li>

				<li>askedabout->patting [INITIATOR_possessive] fur</li>
				<li>askedabout->dogs</li>
				<li>askedabout->alphas and betas, in a non-redpilled way</li>
				<li>askedabout->wolves</li>
				<li>askedabout->wolfpacks</li>
				<li>askedabout->sniffing a sensitive place</li>
				<li>askedabout->sniffing garbage</li>
				<li>askedabout->eating garbage</li>
				<li>askedabout->sleeping in a kennel</li>
				<li>askedabout->the moon</li>
				<li>askedabout->bones</li>
				<li>askedabout->fetch</li>
				<li>askedabout->rolling over</li>
				<li>askedabout->belly rubs</li>
				<li>askedabout->licking [INITIATOR_possessive]</li>

			</rulesStrings>
		</logRulesInitiator>
	</InteractionDef>

	<ThoughtDef Parent="PMAnimalNoise_Chitchat">
		<defName>PawnmorphBark</defName> <!-- keeping def name for compatibility reasons -->
		<stages>
			<li>
				<label>bark</label>
				<baseOpinionOffset>0.66</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>

</Defs>
