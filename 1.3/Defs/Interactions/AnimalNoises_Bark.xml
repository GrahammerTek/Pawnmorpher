<?xml version="1.0" encoding="UTF-8" ?>
<Defs>
	
	<Pawnmorph.Social.PMInteractionWeightsDef>
		<defName>PMInteractionWeights_Canine</defName>
		<requiredMutationsAny>
			<li>EtherHuskyMuzzle</li>
			<li>EtherLabradorRetrieverJaw</li>
			<li>EtherWargMuzzle</li>
			<li>EtherWolfMuzzle</li>
			<li>EtherArcticWolfJaw</li>
		</requiredMutationsAny>
		<!-- Muzzles provide 0.5 weight, ears 0.125 each (0.25 for both), tails 0.25, and morphs get an additional +1, for a total of 2. A fully mutated-morph is thus 4x as likely to bark as a human with just a muzzle. A muzzled human will bark half as often as chatting and a full morph will bark twice as often as chatting -->
		<mutationWeights>
			<!-- Muzzles -->
			<li>
				<key>EtherHuskyMuzzle</key>
				<value>0.5</value>
			</li>
			<li>
				<key>EtherLabradorRetrieverJaw</key>
				<value>0.5</value>
			</li>
			<li>
				<key>EtherWargMuzzle</key>
				<value>0.5</value>
			</li>
			<li>
				<key>EtherWolfMuzzle</key>
				<value>0.5</value>
			</li>
			<li>
				<key>EtherArcticWolfJaw</key>
				<value>0.5</value>
			</li>
			
			<!-- Ears -->
			<li>
				<key>EtherHuskyEar</key>
				<value>0.125</value>
			</li>
			<li>
				<key>EtherLabradorRetrieverEar</key>
				<value>0.125</value>
			</li>
			<li>
				<key>EtherWargEar</key>
				<value>0.125</value>
			</li>
			<li>
				<key>EtherWolfEar</key>
				<value>0.125</value>
			</li>
			
			<!-- Tails -->
			<li>
				<key>EtherHuskyTail</key>
				<value>0.25</value>
			</li>
			<li>
				<key>EtherLabradorRetrieverTail</key>
				<value>0.25</value>
			</li>
			<li>
				<key>EtherWargTail</key>
				<value>0.25</value>
			</li>
			<li>
				<key>EtherWolfTail</key>
				<value>0.25</value>
			</li>
		</mutationWeights>
		<morphWeights>
			<li>
				<key>HuskyMorph</key>
				<value>1</value>
			</li>
			<li>
				<key>LabradorRetrieverMorph</key>
				<value>1</value>
			</li>
			<li>
				<key>WargMorph</key>
				<value>1</value>
			</li>
			<li>
				<key>WolfMorph</key>
				<value>1</value>
			</li>
			<li>
				<key>ArcticWolfMorph</key>
				<value>1</value>
			</li>
		</morphWeights>
	</Pawnmorph.Social.PMInteractionWeightsDef>
	
	
	<!-- Chitchat -->
	<Pawnmorph.Social.PMInteractionDef ParentName="PMAnimalNoise_Chitchat">
		<defName>PMBark_Chitchat</defName>
		<label>bark</label>
		<symbol>Things/Mote/SpeechSymbols/Bark</symbol>
		<initiatorThought>PawnmorphBark</initiatorThought>
		<recipientThought>PawnmorphBark</recipientThought>
		<logRulesInitiator>
			<rulesStrings>
				<li>r_logentry->[INITIATOR_nameDef] [talkedabout] [RECIPIENT_nameDef].</li>
				<li>r_logentry->[INITIATOR_nameDef] asked [RECIPIENT_nameDef] about [askedabout].</li>

				<li>talkedabout(p=4)->barked at</li>
				<li>talkedabout->woofed at</li>
				<li>talkedabout->arfed to</li>
				<li>talkedabout->howled at</li>
				<li>talkedabout->ruffed at</li>
				<li>talkedabout->sniffed</li>
				<li>talkedabout->wagged [INITIATOR_possessive] tail at</li>

				<li>askedabout->patting [INITIATOR_possessive] fur</li>
				<li>askedabout->dogs</li>
				<li>askedabout->alphas and betas, in a non-redpilled way</li>
				<li>askedabout->wolves</li>
				<li>askedabout->wolfpacks</li>
				<li>askedabout->sniffing a sensitive place</li>
				<li>askedabout->sniffing garbage</li>
				<li>askedabout->eating garbage</li>
				<li>askedabout->sleeping in a kennel</li>
				<li>askedabout->the moon</li>
				<li>askedabout->bones</li>
				<li>askedabout->fetch</li>
				<li>askedabout->rolling over</li>
				<li>askedabout->belly rubs</li>
				<li>askedabout->licking [INITIATOR_possessive]</li>

			</rulesStrings>
		</logRulesInitiator>
		<initiatorWeights>PMInteractionWeights_Canine</initiatorWeights>
	</Pawnmorph.Social.PMInteractionDef>
	
	<ThoughtDef ParentName="PMAnimalNoise_ChitchatMemory">
		<defName>PawnmorphBark</defName> <!-- keeping def name for compatibility reasons -->
		<stages>
			<li>
				<label>bark</label>
				<baseOpinionOffset>0.66</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>
	
	
	<!-- Slights -->
	<Pawnmorph.Social.PMInteractionDef ParentName="PMAnimalNoise_Slight">
		<defName>PMBark_Slight</defName>
		<label>growl</label>
		<recipientThought>PMBark_Slight</recipientThought>
		<logRulesInitiator>
			<rulesStrings>
				<li>r_logentry->[INITIATOR_nameDef] [growledat] [RECIPIENT_nameDef].</li>
				<li>r_logentry->[INITIATOR_nameDef] [growledabout] [target]'s [characteristic].</li>
				<li>r_logentry->[INITIATOR_nameDef] [annoyingbehavior].</li>

				<li>target(p=4)->[RECIPIENT_nameDef]</li>
				<li>target->[RECIPIENT_nameDef]'s [PersonFamily]</li>
				
				<li>characteristic->[PersonalCharacteristic]</li>
				<li>characteristic->[caninecharacteristic]</li>
				
				<li>growledat->growled at</li>
				<li>growledat->bared [INITIATOR_possessive] teeth at</li>
				<li>growledat->barked aggressively at</li>
				<li>growledat->yapped annoyingly at</li>
								
				<li>growledabout->growled about</li>
				<li>growledabout->barked about</li>
				<li>growledabout->woofed unhappily about</li>
				<li>growledabout->bared [INITIATOR_possessive] teeth because of</li>
				
				<li>caninecharacteristic->scent</li>
				<li>caninecharacteristic->body language</li>
				<li>caninecharacteristic->lack of treats</li>
				<li>caninecharacteristic->refusal to take [INITIATOR_objective] on walkies</li>
				<li>caninecharacteristic->unwillingness to give [INITIATOR_objective] headpats</li>
				<li>annoyingbehavior->tried to sniff [RECIPIENT_nameDef] in a sensitive place</li>
				<li>annoyingbehavior->annoyingly licked [RECIPIENT_nameDef] face</li>
				<li>annoyingbehavior->drooled on [RECIPIENT_nameDef]</li>
			</rulesStrings>
		</logRulesInitiator>
		<initiatorWeights>PMInteractionWeights_Canine</initiatorWeights>
	</Pawnmorph.Social.PMInteractionDef>
	
	<ThoughtDef ParentName="PMAnimalNoise_SlightMemory">
		<defName>PMBark_Slight</defName>
		<stages>
			<li>
				<label>growl</label>
				<baseOpinionOffset>-5</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>


	<!-- Insults -->
	<Pawnmorph.Social.PMInteractionDef ParentName="PMAnimalNoise_Insult">
		<defName>PMBark_Insult</defName>
		<label>snarl</label>
		<recipientThought>PMBark_Insult</recipientThought>
		<logRulesInitiator>
			<rulesStrings>
				<li>r_logentry(p=3)->[INITIATOR_nameDef] [snarledat] [RECIPIENT_nameDef].</li>
				<li>r_logentry->[INITIATOR_nameDef] [snarledabout] [target]'s [characteristic].</li>
				<li>r_logentry->[INITIATOR_nameDef] [comparedtargetto] [canineinsult].</li>

				<li>comparedtargetto->called [target]</li>
				<li>comparedtargetto->compared [target] to</li>
				<li>comparedtargetto->growled that [target] was</li>

				<li>target(p=4)->[RECIPIENT_nameDef]</li>
				<li>target->[RECIPIENT_nameDef]'s [PersonFamily]</li>
				
				<li>characteristic->[PersonalCharacteristic]</li>
				<li>characteristic->[caninecharacteristic]</li>
				
				<li>snarledat->snarled at</li>
				<li>snarledat->snarled and nipped</li>
				<li>snarledat->tried to bite</li>
				<li>snarledat->aggressively bared [INITIATOR_possessive] fangs at</li>
				<li>snarledat->barked aggressively at</li>
				
				<li>snarledabout->snarled about</li>
				<li>snarledabout->barked aggressively about</li>
				<li>snarledabout->tried to bite [RECIPIENT_nameDef] because of</li>
				<li>snarledabout->bared [INITIATOR_possessive] fangs over</li>
				
				<li>caninecharacteristic->scent</li>
				<li>caninecharacteristic->body language</li>
				<li>caninecharacteristic->lack of treats</li>
				<li>caninecharacteristic->refusal to take [INITIATOR_objective] on walkies</li>
				<li>caninecharacteristic->unwillingness to give [INITIATOR_objective] headpats</li>
				
				<li>canineinsult->a female dog</li>
				<li>canineinsult->a cat</li>
				<li>canineinsult->a veterinarian</li>
				<li>canineinsult->a gnawed bone</li>
				<li>canineinsult->a chewtoy</li>
				<li>canineinsult->kibble</li>
			</rulesStrings>
		</logRulesInitiator>
		<initiatorWeights>PMInteractionWeights_Canine</initiatorWeights>
	</Pawnmorph.Social.PMInteractionDef>
	
	<ThoughtDef ParentName="PMAnimalNoise_InsultMemory">
		<defName>PMBark_Insult</defName>
		<stages>
			<li>
				<label>snarl</label>
				<baseOpinionOffset>-15</baseOpinionOffset>
			</li>
		</stages>
		<thoughtToMake>PMBark_InsultedMood</thoughtToMake>
	</ThoughtDef>
	
	<ThoughtDef ParentName="PMAnimalNoise_InsultedMood">
		<defName>PMBark_InsultedMood</defName>
		<stages>
			<li>
				<label>snarled at</label>
				<description>I've been snarled at! What an awful canine!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
