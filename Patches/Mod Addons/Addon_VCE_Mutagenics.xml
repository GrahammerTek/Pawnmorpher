<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Cooking Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
						<ThingDef ParentName="RoughPlantBase">
							<defName>PM_MutaniteSalt</defName>
							<label>mutanite salt</label>
							<description>Mutanite that's been ground up into a fine powder, that can be sprinked over foods to give chaotic mutations to anyone who eats them...</description>
							<graphicData>
								<texPath>Things/Items/Condiments/VCE_InsectJellyPreserves</texPath>
								<graphicClass>Graphic_StackCount</graphicClass>
							</graphicData>
							<statBases>
								<MarketValue>100</MarketValue>
								<Nutrition>0</Nutrition>
								<Flammability>1.3</Flammability>
							</statBases>

							<thingCategories>
								<li>VCE_Condiments</li>
							</thingCategories>
							<ingestible>
								<preferability>NeverForNutrition</preferability>
								<specialThoughtAsIngredient>PM_ConsumedDigestibleFullRandomTF</specialThoughtAsIngredient>

							</ingestible>
						</ThingDef>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
						<ThoughtDef>
							<thoughtClass>VanillaCookingExpanded.Thought_Hediff</thoughtClass>
							<defName>PM_ConsumedDigestibleFullRandomTF</defName>
							<hediff>FullRandomTF</hediff>
							<durationDays>0.5</durationDays>
							<stages>
								<li>
									<label>strange salt</label>
									<description>I'm not sure the salt on that meal was really salt...</description>
									<baseMoodEffect>-1</baseMoodEffect>
								</li>
							</stages>
							
						</ThoughtDef>
					</value>
				</li>

				<!-- Cowmorph Milk -->
				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs</xpath>
					<value>
						<ItemProcessor.CombinationDef>
							<defName>PM_CowmorphMilkIntoCheese</defName>
							<building>VCE_CheesePress</building>
							<items>
								<li>TFMilk</li>
							</items>	
							<amount>
								<li>20</li>
							</amount>
							<result>PM_CowmorphCheese</result>	
							<yield>1</yield>
							<useQualityIncreasing>true</useQualityIncreasing>
							<awfulQualityAgeDaysThreshold>10</awfulQualityAgeDaysThreshold>
							<poorQualityAgeDaysThreshold>15</poorQualityAgeDaysThreshold>
							<normalQualityAgeDaysThreshold>25</normalQualityAgeDaysThreshold>
							<goodQualityAgeDaysThreshold>35</goodQualityAgeDaysThreshold>
							<excellentQualityAgeDaysThreshold>40</excellentQualityAgeDaysThreshold>
							<masterworkQualityAgeDaysThreshold>45</masterworkQualityAgeDaysThreshold>
							<legendaryQualityAgeDaysThreshold>75</legendaryQualityAgeDaysThreshold>
						</ItemProcessor.CombinationDef>
					</value>
				</li>


				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs</xpath>
					<value>


						<ThingDef ParentName="MealBase">
							<defName>PM_CowmorphCheese</defName>
							<label>cowmorph cheese</label>
							<description>A green coloured cheese, with a slightly metallic taste to it. It's extraodinarily dense and crumbly, and highly 'moo-tagenetic'.</description>
							<graphicData>
								<texPath>Things/Items/Cheese/VCE_BrownCheese</texPath>
								<graphicClass>Graphic_StackCount</graphicClass>
							</graphicData>
							<tradeability>Sellable</tradeability>
							<stackLimit>75</stackLimit>
							<statBases>
								<MarketValue>300</MarketValue>
								<Nutrition>0.1</Nutrition>

							</statBases>
							<thingCategories>
								<li>VCE_Cheese</li>
							</thingCategories>
							<ingestible>
								<preferability>MealLavish</preferability>
								<ingestEffect>EatMeat</ingestEffect>
								<ingestSound>Meal_Eat</ingestSound>
								<joy>0.10</joy>
								<joyKind>Gluttonous</joyKind>
								<maxNumToIngestAtOnce>10</maxNumToIngestAtOnce>
								<preferability>NeverForNutrition</preferability>
								<specialThoughtAsIngredient>PM_ConsumedDigestibleCowmorphCheeseTF</specialThoughtAsIngredient>
							</ingestible>
							<comps>
								<li Class="CompProperties_Rottable">
									<daysToRotStart>200</daysToRotStart>
									<rotDestroys>true</rotDestroys>
								</li>
								<li>
									<compClass>CompQuality</compClass>
								</li>
								<li Class="VanillaCookingExpanded.CompProperties_StackByQuality" />
							</comps>
						</ThingDef>


					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
						<ThoughtDef>
							<thoughtClass>VanillaCookingExpanded.Thought_Hediff</thoughtClass>
							<defName>PM_ConsumedDigestibleCowmorphCheeseTF</defName>
							<hediff>PawnmorphCowTF</hediff>
							<durationDays>0.5</durationDays>
							<stages>
								<li>
									<label>strange cheese</label>
									<description>That cheese tasted like metal, and I'm feeling a sudden urge to moo...</description>
									<baseMoodEffect>-1</baseMoodEffect>
								</li>
							</stages>
							
						</ThoughtDef>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/ItemProcessor.ItemAcceptedDef[defName = "IP_CheesePressFirstItem"]/items</xpath>
					<value>
						<li>TFMilk</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>